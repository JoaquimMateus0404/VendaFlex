{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "%LOCALAPPDATA%/VendaFlex/logs/vendaflex-.log",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "fileSizeLimitBytes": 10485760,
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}",
          "shared": true
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },

  "Database": {
    "CommandTimeout": 60,
    "EnableRetryOnFailure": true,
    "MaxRetryCount": 5,
    "MaxRetryDelay": 30
  },

  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\MSSQLLocalDB;Database=VendaFlexDB;Integrated Security=true;TrustServerCertificate=true;MultipleActiveResultSets=true;"
  },

  "CompanyDefaults": {
    "CompanyName": "Minha Empresa",
    "TaxId": "000000000",
    "Address": "Rua Principal, 123",
    "City": "Luanda",
    "Country": "Angola",
    "PhoneNumber": "+244 900 000 000",
    "Email": "contato@minhaempresa.ao",
    "Currency": "AOA",
    "CurrencySymbol": "Kz",
    "DefaultTaxRate": 14.0,
    "InvoicePrefix": "INV",
    "InvoiceFormat": 0,
    "IncludeCustomerData": true,
    "AllowAnonymousInvoice": false
  },

  "Security": {
    "PasswordMinLength": 8,
    "PasswordRequireUppercase": true,
    "PasswordRequireLowercase": true,
    "PasswordRequireDigit": true,
    "PasswordRequireSpecialChar": false,
    "MaxFailedLoginAttempts": 5,
    "LockoutDurationMinutes": 30,
    "SessionTimeoutMinutes": 480
  },

  "Backup": {
    "Enabled": true,
    "AutoBackupEnabled": true,
    "BackupIntervalHours": 24,
    "BackupPath": "%LOCALAPPDATA%/VendaFlex/backups",
    "RetainedBackupDays": 30,
    "CompressBackups": true
  },

  "Printing": {
    "DefaultFormat": "A4",
    "DefaultPrinter": "",
    "AutoPrintInvoice": false,
    "PrintCopies": 1,
    "ShowPrintDialog": true
  },

  "Features": {
    "EnableAuditLog": true,
    "EnablePriceHistory": true,
    "EnableExpirationControl": true,
    "EnableStockControl": true,
    "EnableMultiplePaymentMethods": true,
    "EnableExpenseTracking": true,
    "EnableReports": true
  },

  "UI": {
    "Theme": "Light",
    "Language": "pt-PT",
    "DateFormat": "dd/MM/yyyy",
    "TimeFormat": "HH:mm",
    "CurrencyFormat": "#,##0.00",
    "ShowWelcomeScreen": true,
    "RememberLastUser": true,
    "SplashMinMilliseconds": 3500
  },

  "Performance": {
    "EnableCaching": true,
    "CacheDurationMinutes": 15,
    "MaxCacheSize": 100,
    "LazyLoadingEnabled": false,
    "QueryTrackingEnabled": true
  },

  "FileStorage": {
    "RootPath": "%LOCALAPPDATA%/VendaFlex/uploads",
    "MaxFileSizeMB": 10,
    "AllowedImageExtensions": [ ".jpg", ".jpeg", ".png", ".gif", ".bmp" ],
    "AllowedDocumentExtensions": [ ".pdf", ".docx", ".xlsx" ],
    "CompressImages": true,
    "ImageQuality": 85
  },

  "Notifications": {
    "LowStockWarning": true,
    "ExpirationWarning": true,
    "PaymentReminder": true,
    "BackupReminder": true,
    "UpdateNotification": true
  }
}