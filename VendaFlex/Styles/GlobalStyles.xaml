<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:conv="clr-namespace:VendaFlex.Infrastructure.Converters">

    <!-- ============================================ -->
    <!-- PALETA DE CORES (SEMANTICA) -->
    <!-- Chaves: Color.* e Brush.* para uso consistente em toda a aplicação -->
    <!-- ============================================ -->

    <!-- Cores primárias e secundárias -->
    <Color x:Key="ColorPrimary">#FF3B82F6</Color>        <!-- Azul principal (usado no logo e elementos de destaque) -->
    <Color x:Key="ColorPrimaryDark">#FF1E40AF</Color>    <!-- Azul escuro -->
    <Color x:Key="ColorPrimaryLight">#FF60A5FA</Color>   <!-- Azul claro -->

    <Color x:Key="ColorSecondary">#FF8B5CF6</Color>      <!-- Roxo secundário -->
    <Color x:Key="ColorSecondaryDark">#FF6D28D9</Color>

    <!-- Acento / Destaque (combina com Indigo + Purple) -->
    <Color x:Key="ColorAccent">#FFA3E635</Color>         <!-- Verde-lima suave -->

    <!-- Feedback colors -->
    <Color x:Key="ColorSuccess">#FF10B981</Color>
    <Color x:Key="ColorWarning">#FFF59E0B</Color>
    <Color x:Key="ColorError">#FFEF4444</Color>
    <Color x:Key="ColorInfo">#FF0284C7</Color>

    <!-- Neutros e background -->
    <Color x:Key="ColorBackgroundDeep">#FF0A0E27</Color> <!-- usado no ModernGradient -->
    <Color x:Key="ColorBackground">#FF0F1724</Color>
    <Color x:Key="ColorSurface">#FF111827</Color>
    <Color x:Key="ColorSurfaceVariant">#FF1F2937</Color>
    <Color x:Key="ColorCard">#FF0F1724</Color>

    <Color x:Key="ColorBorder">#FF475569</Color>
    <Color x:Key="ColorBorderLight">#FF374151</Color>
    <Color x:Key="ColorBorderHover">#FF4B5563</Color>
    <Color x:Key="ColorDivider">#FF334155</Color>

    <!-- Texto -->
    <Color x:Key="ColorTextPrimary">#FFFFFFFF</Color>
    <Color x:Key="ColorTextSecondary">#FF94A3B8</Color>
    <Color x:Key="ColorTextTertiary">#FF6B7280</Color>
    <Color x:Key="ColorTextDisabled">#FF64748B</Color>
    <Color x:Key="ColorTextOnPrimary">#FFFFFFFF</Color>

    <!-- ============================================ -->
    <!-- BRUSHES (convenience) -->
    <!-- ============================================ -->

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource ColorPrimary}" />
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource ColorPrimaryDark}" />
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource ColorPrimaryLight}" />

    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource ColorSecondary}" />
    <SolidColorBrush x:Key="SecondaryDarkBrush" Color="{StaticResource ColorSecondaryDark}" />

    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource ColorAccent}" />

    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource ColorSuccess}" />
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource ColorWarning}" />
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ColorError}" />
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource ColorInfo}" />

    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource ColorBackground}" />
    <SolidColorBrush x:Key="BackgroundDeepBrush" Color="{StaticResource ColorBackgroundDeep}" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource ColorSurface}" />
    <SolidColorBrush x:Key="SurfaceVariantBrush" Color="{StaticResource ColorSurfaceVariant}" />
    <SolidColorBrush x:Key="CardBrush" Color="{StaticResource ColorCard}" />

    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource ColorBorder}" />
    <SolidColorBrush x:Key="BorderLightBrush" Color="{StaticResource ColorBorderLight}" />
    <SolidColorBrush x:Key="BorderHoverBrush" Color="{StaticResource ColorBorderHover}" />
    <SolidColorBrush x:Key="DividerBrush" Color="{StaticResource ColorDivider}" />

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource ColorTextPrimary}" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource ColorTextSecondary}" />
    <SolidColorBrush x:Key="TextTertiaryBrush" Color="{StaticResource ColorTextTertiary}" />
    <SolidColorBrush x:Key="TextDisabledBrush" Color="{StaticResource ColorTextDisabled}" />
    <SolidColorBrush x:Key="TextOnPrimaryBrush" Color="{StaticResource ColorTextOnPrimary}" />


    <!-- ============================================ -->
    <!-- GRADIENTES -->
    <!-- ============================================ -->
    
    <!-- Gradiente Moderno - Fundo Escuro (mantido para compatibilidade com Splash) -->
    <LinearGradientBrush x:Key="ModernGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#0A0E27" Offset="0"/>
        <GradientStop Color="#1A1B3F" Offset="0.5"/>
        <GradientStop Color="#0F1419" Offset="1"/>
    </LinearGradientBrush>

    <!-- Gradiente para Logo e Elementos de Destaque -->
    <LinearGradientBrush x:Key="LogoGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#3B82F6" Offset="0"/>
        <GradientStop Color="#8B5CF6" Offset="1"/>
    </LinearGradientBrush>

    <!-- Gradiente Purple-Pink -->
    <LinearGradientBrush x:Key="PurplePinkGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#A78BFA" Offset="0"/>
        <GradientStop Color="#F472B6" Offset="1"/>
    </LinearGradientBrush>

    <!-- Gradiente Success -->
    <LinearGradientBrush x:Key="SuccessGradient" StartPoint="0,0" EndPoint="1,0">
        <GradientStop Color="#10B981" Offset="0"/>
        <GradientStop Color="#3B82F6" Offset="1"/>
    </LinearGradientBrush>

    <!-- Gradiente Border Glass -->
    <LinearGradientBrush x:Key="GlassBorderGradient" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#374151" Offset="0"/>
        <GradientStop Color="#1F2937" Offset="1"/>
    </LinearGradientBrush>

    <!-- ============================================ -->
    <!-- EFEITOS DE SOMBRA -->
    <!-- ============================================ -->
    
    <!-- Efeito de Brilho/Glow -->
    <DropShadowEffect x:Key="GlowEffect" 
                     Color="#3B82F6" 
                     BlurRadius="30" 
                     ShadowDepth="0" 
                     Opacity="0.6"/>

    <!-- Sombra para Cards e Containers -->
    <DropShadowEffect x:Key="CardShadow" 
                     Color="#000000" 
                     BlurRadius="40" 
                     ShadowDepth="0" 
                     Opacity="0.4"/>

    <!-- Sombra Material Design Depth 2 -->
    <DropShadowEffect x:Key="MaterialShadowDepth2"
                     Color="#000000"
                     BlurRadius="10"
                     ShadowDepth="2"
                     Opacity="0.3"/>

    <!-- ============================================ -->
    <!-- EASING FUNCTIONS -->
    <!-- ============================================ -->
    
    <!-- Easing Quadratico para Animacoes Suaves -->
    <QuadraticEase x:Key="QuadraticEase" EasingMode="EaseOut"/>

    <!-- ============================================ -->
    <!-- ESTILOS DE CARD -->
    <!-- ============================================ -->

    <!-- Estilo de Card Glassmorphism -->
    <Style x:Key="GlassCard" TargetType="Border">
        <Setter Property="Background">
            <Setter.Value>
                <SolidColorBrush Color="#1F2937" Opacity="0.6"/>
            </Setter.Value>
        </Setter>
        <Setter Property="CornerRadius" Value="20"/>
        <Setter Property="Padding" Value="40"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="{StaticResource GlassBorderGradient}"/>
        <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
    </Style>

    <!-- ============================================ -->
    <!-- ESTILOS DE TEXTBOX -->
    <!-- ============================================ -->

    <!-- Estilo de TextBox Moderno -->
    <Style x:Key="ModernTextBox" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderLightBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CaretBrush" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Height" Value="48"/>
        <Setter Property="Margin" Value="0,0,0,20"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Grid>
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <Grid Margin="{TemplateBinding Padding}">
                                <ScrollViewer x:Name="PART_ContentHost" 
                                            VerticalAlignment="Center"/>
                                <TextBlock x:Name="Placeholder"
                                         Text="{TemplateBinding Tag}"
                                         Foreground="{StaticResource TextTertiaryBrush}"
                                         IsHitTestVisible="False"
                                         VerticalAlignment="Center"
                                         Visibility="Collapsed"/>
                            </Grid>
                        </Border>
                        <Border x:Name="FocusBorder"
                                BorderBrush="{StaticResource PrimaryBrush}"
                                BorderThickness="2"
                                CornerRadius="8"
                                Opacity="0"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Text" Value="">
                            <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" Value="{StaticResource BorderHoverBrush}"/>
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="FocusBorder" Property="Opacity" Value="1"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                        </Trigger>
                        <Trigger Property="Validation.HasError" Value="True">
                            <Setter Property="BorderBrush" Value="{StaticResource ErrorBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ============================================ -->
    <!-- ESTILOS DE COMBOBOX -->
    <!-- ============================================ -->

    <!-- Estilo de ComboBox Moderno -->
    <Style x:Key="ModernComboBox" TargetType="ComboBox">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderLightBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="14,12"/>
        <Setter Property="Height" Value="48"/>
        <Setter Property="Margin" Value="0,0,0,20"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ContentPresenter Grid.Column="0"
                                                Content="{TemplateBinding SelectionBoxItem}"
                                                ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                Margin="{TemplateBinding Padding}"
                                                VerticalAlignment="Center"/>
                                <materialDesign:PackIcon Grid.Column="1" 
                                                       Kind="ChevronDown" 
                                                       Foreground="{StaticResource TextTertiaryBrush}"
                                                       Width="20" Height="20"
                                                       Margin="0,0,12,0"
                                                       VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <ToggleButton x:Name="ToggleButton"
                                      Grid.ColumnSpan="2"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      Focusable="False"
                                      IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"/>

                        <Popup x:Name="PART_Popup"
                               IsOpen="{TemplateBinding IsDropDownOpen}"
                               Placement="Bottom"
                               PlacementTarget="{Binding ElementName=ToggleButton}"
                               AllowsTransparency="True"
                               StaysOpen="False">
                            <Border Background="{StaticResource SurfaceVariantBrush}"
                                    BorderBrush="{StaticResource BorderLightBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Margin="0,4,0,0"
                                    Effect="{StaticResource MaterialShadowDepth2}">
                                <ScrollViewer MaxHeight="200">
                                    <ItemsPresenter/>
                                </ScrollViewer>
                            </Border>
                        </Popup>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" Value="{StaticResource BorderHoverBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style TargetType="ComboBoxItem">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                    <Setter Property="Padding" Value="14,10"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ComboBoxItem">
                                <Border Background="{TemplateBinding Background}"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource BorderLightBrush}"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ============================================ -->
    <!-- ESTILOS DE PASSWORDBOX -->
    <!-- ============================================ -->

    <!-- Estilo de PasswordBox Moderno -->
    <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
        <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderLightBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CaretBrush" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="5"/>
        <Setter Property="Height" Value="48"/>
        <Setter Property="Margin" Value="0,0,0,20"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="PasswordBox">
                    <Grid>
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <Grid Margin="{TemplateBinding Padding}">
                                <ScrollViewer x:Name="PART_ContentHost" 
                                            VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <Border x:Name="FocusBorder"
                                BorderBrush="{StaticResource PrimaryBrush}"
                                BorderThickness="2"
                                CornerRadius="8"
                                Opacity="0"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" Value="{StaticResource BorderHoverBrush}"/>
                        </Trigger>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="FocusBorder" Property="Opacity" Value="1"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ============================================ -->
    <!-- ESTILOS DE LABEL E TEXTO -->
    <!-- ============================================ -->

    <!-- Estilo de Label Moderno -->
    <Style x:Key="ModernLabel" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <!-- Estilo de Titulo de Secao -->
    <Style x:Key="SectionTitle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource LogoGradient}"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <!-- ============================================ -->
    <!-- ESTILOS DE BOTAO -->
    <!-- ============================================ -->

    <!-- Estilo de Botao Primary -->
    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="Height" Value="48"/>
        <Setter Property="Padding" Value="24,0"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextOnPrimaryBrush}"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Background" Value="{StaticResource LogoGradient}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="8"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Opacity" Value="0.9"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="0.5"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Estilo de Botao Secondary -->
    <Style x:Key="SecondaryButton" TargetType="Button">
        <Setter Property="Height" Value="48"/>
        <Setter Property="Padding" Value="24,0"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderLightBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource SurfaceVariantBrush}"/>
                <Setter Property="BorderBrush" Value="{StaticResource BorderHoverBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <conv:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

</ResourceDictionary>