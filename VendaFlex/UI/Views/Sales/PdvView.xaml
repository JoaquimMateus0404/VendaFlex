<Page x:Class="VendaFlex.UI.Views.Sales.PdvView"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 xmlns:converters="clr-namespace:VendaFlex.UI.Converters"
 xmlns:infconv="clr-namespace:VendaFlex.Infrastructure.Converters"
 mc:Ignorable="d" Loaded="Page_Loaded" d:DesignHeight="1413.143" d:DesignWidth="1332.487">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/GlobalStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:HeightToScrollBarVisibilityConverter x:Key="HeightToScrollBarVisibilityConverter"/>
            <infconv:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
            <infconv:DecimalZeroWhenEmptyConverter x:Key="DecimalZeroWhenEmptyConverter"/>
            <infconv:StringToImageSourceConverter x:Key="StringToImageSourceConverter"/>
        </ResourceDictionary>
    </Page.Resources>

    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Content -->
        <Grid Grid.Row="0" Background="{DynamicResource MaterialDesignPaper}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryMid" Height="72" Padding="24,0"
                                          materialDesign:ElevationAssist.Elevation="Dp2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Logo + Title -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="CashRegister" Width="32" Height="32" 
                                                     VerticalAlignment="Center" Margin="0,0,14,0"/>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Ponto de Venda" Style="{DynamicResource MaterialDesignHeadline6TextBlock}"/>
                                <TextBlock Text="Sistema de vendas" Style="{DynamicResource MaterialDesignCaptionTextBlock}" Opacity="0.8"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Center - Time -->
                        <materialDesign:Chip Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                                             Icon="{materialDesign:PackIcon Kind=Clock}">
                            <TextBlock x:Name="CurrentTimeText" Text="{Binding CurrentTime}"/>
                        </materialDesign:Chip>

                        <!-- Right - User & Actions -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:Chip HorizontalAlignment="Right" Margin="0,0,12,0">
                                <materialDesign:Chip.Icon>
                                    <TextBlock x:Name="UserInitials" Text="{Binding UserInitials}" 
                                               FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </materialDesign:Chip.Icon>
                                <StackPanel>
                                    <TextBlock x:Name="UserNameText" Text="{Binding UserName}" FontWeight="SemiBold"/>
                                    
                                </StackPanel>
                            </materialDesign:Chip>

                            <Button Style="{DynamicResource MaterialDesignIconButton}" 
                                    ToolTip="Venda Pendente (Pagamento Parcial)" 
                                    Command="{Binding CreatePendingSaleCommand}"
                                    Margin="0,0,8,0">
                                <materialDesign:PackIcon Kind="ClockAlert" Width="24" Height="24" Foreground="Orange"/>
                            </Button>

                            <Button Style="{DynamicResource MaterialDesignIconButton}" 
                                    ToolTip="Gerar Relatório Diário de Vendas" 
                                    Command="{Binding GenerateDailySalesReportCommand}"
                                    Margin="0,0,8,0">
                                <materialDesign:PackIcon Kind="ReceiptText" Width="24" Height="24" Foreground="White"/>
                            </Button>

                            <Button x:Name="ProductCatalogButton" 
                                    Style="{DynamicResource MaterialDesignIconButton}" 
                                    ToolTip="Catálogo de Produtos" 
                                    Command="{Binding OpenCatalogCommand}">
                                <materialDesign:PackIcon Kind="ViewGrid" Width="24" Height="24" Foreground="White"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </materialDesign:ColorZone>

                <!-- Main Content Area -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="{Binding ElementName=RootGrid, Path=ActualHeight, 
                              Converter={StaticResource HeightToScrollBarVisibilityConverter}, ConverterParameter=720}">
                    <Grid Margin="24,20" MinHeight="{Binding ElementName=RootGrid, Path=ActualHeight}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="1.2*"/>
                        </Grid.ColumnDefinitions>

                        <!-- LEFT PANEL -->
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Customer Selection -->
                            <materialDesign:Card Grid.Row="0" Margin="0,0,0,16" Padding="20"
                                                 materialDesign:ElevationAssist.Elevation="Dp2">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0" Margin="0,0,0,14">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Account" Width="20" Height="20" 
                                                                     VerticalAlignment="Center" Margin="0,0,10,0"/>
                                            <TextBlock Text="Cliente" Style="{DynamicResource MaterialDesignSubtitle1TextBlock}" 
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <Button Content="Consumidor Final" 
                                                Style="{DynamicResource MaterialDesignOutlinedButton}" 
                                                HorizontalAlignment="Right" Height="32"
                                                Command="{Binding SelectAnonymousCustomerCommand}"/>
                                    </Grid>

                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="12"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox Grid.Column="0" x:Name="CustomerSearchBox" 
                                                 Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                                                 materialDesign:HintAssist.Hint="Buscar cliente por nome, NIF..." 
                                                 Text="{Binding CustomerSearchTerm, UpdateSourceTrigger=PropertyChanged}"/>

                                        <Popup IsOpen="{Binding CustomerSuggestions.Count, Mode=OneWay, Converter={StaticResource CountToBoolConverter}}"
                                               PlacementTarget="{Binding ElementName=CustomerSearchBox}"
                                               Placement="Bottom" StaysOpen="False" AllowsTransparency="True">
                                            <materialDesign:Card MaxHeight="300" MinWidth="400"
                                                                 materialDesign:ElevationAssist.Elevation="Dp4">
                                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                    <ItemsControl ItemsSource="{Binding CustomerSuggestions}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Button Command="{Binding DataContext.SelectCustomerFromSuggestionsCommand, 
                                                                        RelativeSource={RelativeSource AncestorType=Page}}"
                                                                        CommandParameter="{Binding}" 
                                                                        Margin="0,5"
                                                                        MinHeight="40"
                                                                        Style="{DynamicResource MaterialDesignFlatButton}"
                                                                        Padding="0" HorizontalContentAlignment="Left">
                                                                    <StackPanel >
                                                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                                                        <TextBlock Text="{Binding TaxId}" 
                                                                                   Style="{DynamicResource MaterialDesignCaptionTextBlock}" />
                                                                    </StackPanel>
                                                                </Button>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </ScrollViewer>
                                            </materialDesign:Card>
                                        </Popup>

                                        <materialDesign:Chip Grid.Column="2" 
                                                             Icon="{materialDesign:PackIcon Kind=CheckCircle}"
                                                             IconBackground="{DynamicResource PrimaryHueMidBrush}"
                                                             Visibility="{Binding SelectedCustomer, Converter={StaticResource NullToVisibilityConverter}}">
                                            <TextBlock Text="{Binding SelectedCustomer.Name}" FontWeight="SemiBold"/>
                                        </materialDesign:Chip>
                                    </Grid>
                                </Grid>
                            </materialDesign:Card>

                            <!-- Quick Product Add -->
                            <materialDesign:Card Grid.Row="1" Margin="0,0,0,16" Padding="20"
                                                 materialDesign:ElevationAssist.Elevation="Dp2">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0" Margin="0,0,0,14">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Barcode" Width="20" Height="20" 
                                                                     VerticalAlignment="Center" Margin="0,0,10,0"/>
                                            <TextBlock Text="Adicionar Produto" 
                                                       Style="{DynamicResource MaterialDesignSubtitle1TextBlock}" 
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <Button Content="Catálogo →" 
                                                Style="{DynamicResource MaterialDesignOutlinedButton}" 
                                                HorizontalAlignment="Right" Height="32"
                                                Command="{Binding OpenCatalogCommand}"/>
                                    </Grid>

                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="12"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox Grid.Column="0" x:Name="ProductSearchBox" 
                                                 Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                                                 materialDesign:HintAssist.Hint="Código / SKU / Nome..." 
                                                 Text="{Binding ProductSearchTerm, UpdateSourceTrigger=PropertyChanged}">
                                            <TextBox.InputBindings>
                                                <KeyBinding Key="Enter" Command="{Binding AddProductByCodeCommand}"/>
                                            </TextBox.InputBindings>
                                        </TextBox>

                                        <Popup IsOpen="{Binding ProductSuggestions.Count, Mode=OneWay, Converter={StaticResource CountToBoolConverter}}"
                                               PlacementTarget="{Binding ElementName=ProductSearchBox}"
                                               Placement="Bottom" StaysOpen="False" AllowsTransparency="True">
                                            <materialDesign:Card MaxHeight="300" MinWidth="400"
                                                                 materialDesign:ElevationAssist.Elevation="Dp4">
                                                <ListBox ItemsSource="{Binding ProductSuggestions}" 
                                                         SelectedItem="{Binding SelectedProductSuggestion}">
                                                    <ListBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <Grid Margin="10">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>
                                                                <StackPanel Grid.Column="0">
                                                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                                                                    <TextBlock Text="{Binding Barcode}" 
                                                                               Style="{DynamicResource MaterialDesignCaptionTextBlock}"/>
                                                                </StackPanel>
                                                                <TextBlock Grid.Column="1" 
                                                                           Text="{Binding SalePrice, StringFormat=Kz {0:N2}}" 
                                                                           FontWeight="Bold" 
                                                                           Foreground="{DynamicResource PrimaryHueMidBrush}" 
                                                                           VerticalAlignment="Center"/>
                                                            </Grid>
                                                        </DataTemplate>
                                                    </ListBox.ItemTemplate>
                                                    <ListBox.InputBindings>
                                                        <KeyBinding Key="Enter" Command="{Binding AddSelectedSuggestionCommand}"/>
                                                    </ListBox.InputBindings>
                                                </ListBox>
                                            </materialDesign:Card>
                                        </Popup>

                                        <Button Grid.Column="2" 
                                                Style="{DynamicResource MaterialDesignRaisedButton}" 
                                                Command="{Binding AddProductByCodeCommand}">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center"/>
                                                <TextBlock Text="Adicionar" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Button>
                                    </Grid>
                                </Grid>
                            </materialDesign:Card>

                            <!-- Shopping Cart -->
                            <materialDesign:Card Grid.Row="2" Padding="20"
                                                 materialDesign:ElevationAssist.Elevation="Dp2">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0" Margin="0,0,0,16">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Cart" Width="20" Height="20" 
                                                                     VerticalAlignment="Center" Margin="0,0,10,0"/>
                                            <TextBlock Text="Carrinho de Compras" 
                                                       Style="{DynamicResource MaterialDesignSubtitle1TextBlock}" 
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <materialDesign:Chip HorizontalAlignment="Right">
                                            <TextBlock>
                                                <Run Text="{Binding CartItems.Count, Mode=OneWay}"/>
                                                <Run Text="itens"/>
                                            </TextBlock>
                                        </materialDesign:Chip>
                                    </Grid>

                                    <DataGrid Grid.Row="1" ItemsSource="{Binding CartItems}"
                                              AutoGenerateColumns="False" HeadersVisibility="Column"
                                              CanUserAddRows="False" CanUserDeleteRows="False"
                                              SelectionMode="Single" RowHeaderWidth="0"
                                              VerticalScrollBarVisibility="Auto">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Produto" Binding="{Binding Name}" Width="*" IsReadOnly="True">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="FontWeight" Value="Medium"/>
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>
                                            <DataGridTemplateColumn Header="Qtd" Width="120">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                            <Button Style="{DynamicResource MaterialDesignIconButton}" 
                                                                    Width="26" Height="26"
                                                                    Command="{Binding DataContext.DecreaseItemQtyCommand, 
                                                                    RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                                                    CommandParameter="{Binding}">
                                                                <materialDesign:PackIcon Kind="Minus" Width="14" Height="14"/>
                                                            </Button>
                                                            <TextBox Text="{Binding Quantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                                     Width="44" HorizontalContentAlignment="Center" 
                                                                     VerticalContentAlignment="Center" FontWeight="SemiBold" 
                                                                     Margin="6,0"/>
                                                            <Button Style="{DynamicResource MaterialDesignIconButton}" 
                                                                    Width="26" Height="26"
                                                                    Command="{Binding DataContext.IncreaseItemQtyCommand, 
                                                                    RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                                                    CommandParameter="{Binding}">
                                                                <materialDesign:PackIcon Kind="Plus" Width="14" Height="14"/>
                                                            </Button>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTextColumn Header="Preço Unit." 
                                                                Binding="{Binding UnitPrice, StringFormat=Kz {0:N2}}" 
                                                                Width="110" IsReadOnly="True">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>
                                            <DataGridTemplateColumn Header="Desconto" Width="110">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding Discount, StringFormat=Kz {0:N2}}" 
                                                                   HorizontalAlignment="Right"/>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                                <DataGridTemplateColumn.CellEditingTemplate>
                                                    <DataTemplate>
                                                        <TextBox Text="{Binding Discount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, 
                                                                 Converter={StaticResource DecimalZeroWhenEmptyConverter}, StringFormat=N2}" 
                                                                 HorizontalContentAlignment="Right"/>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellEditingTemplate>
                                            </DataGridTemplateColumn>
                                            <DataGridTextColumn Header="Total" 
                                                                Binding="{Binding LineTotal, StringFormat=Kz {0:N2}}" 
                                                                Width="120" IsReadOnly="True">
                                                <DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                        <Setter Property="FontWeight" Value="Bold"/>
                                                        <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
                                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                                    </Style>
                                                </DataGridTextColumn.ElementStyle>
                                            </DataGridTextColumn>
                                            <DataGridTemplateColumn Header="Ações" Width="70">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Button Style="{DynamicResource MaterialDesignIconButton}" 
                                                                Width="30" Height="30"
                                                                Command="{Binding DataContext.RemoveItemCommand, 
                                                                RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                                                CommandParameter="{Binding}" ToolTip="Remover">
                                                            <materialDesign:PackIcon Kind="Delete" Width="16" Height="16" 
                                                                                     Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"/>
                                                        </Button>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>

                                    <Button Grid.Row="2" 
                                            Style="{DynamicResource MaterialDesignOutlinedButton}" 
                                            Width="140" Margin="0,16,0,0"
                                            Command="{Binding ClearCartCommand}">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Delete"/>
                                            <TextBlock Text="Limpar Tudo" Margin="8,0,0,0"/>
                                        </StackPanel>
                                    </Button>
                                </Grid>
                            </materialDesign:Card>
                        </Grid>

                        <!-- RIGHT PANEL -->
                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Order Summary -->
                            <materialDesign:Card Grid.Row="0" Margin="0,0,0,16" Padding="20"
                                                 materialDesign:ElevationAssist.Elevation="Dp2">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                        <materialDesign:PackIcon Kind="Receipt" Width="20" Height="20" 
                                                                 VerticalAlignment="Center" Margin="0,0,10,0"/>
                                        <TextBlock Text="Resumo do Pedido" 
                                                   Style="{DynamicResource MaterialDesignSubtitle1TextBlock}" 
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <Grid Margin="0,0,0,10">
                                        <TextBlock Text="Subtotal" Style="{DynamicResource MaterialDesignBody2TextBlock}"/>
                                        <TextBlock HorizontalAlignment="Right" FontWeight="Medium">
                                            <Run Text="Kz"/>
                                            <Run Text="{Binding SubTotal, Mode=OneWay, StringFormat={}{0:N2}}"/>
                                        </TextBlock>
                                    </Grid>

                                    <Grid Margin="0,0,0,10">
                                        <TextBlock Text="Descontos" Style="{DynamicResource MaterialDesignBody2TextBlock}"/>
                                        <TextBlock HorizontalAlignment="Right" FontWeight="Medium" 
                                                   Foreground="{DynamicResource MaterialDesignValidationErrorBrush}">
                                            <Run Text="- Kz"/>
                                            <Run Text="{Binding DiscountTotal, Mode=OneWay, StringFormat={}{0:N2}}"/>
                                        </TextBlock>
                                    </Grid>

                                    <Grid Margin="0,0,0,14">
                                        <TextBlock Text="Impostos" Style="{DynamicResource MaterialDesignBody2TextBlock}"/>
                                        <TextBlock HorizontalAlignment="Right" FontWeight="Medium">
                                            <Run Text="Kz"/>
                                            <Run Text="{Binding TaxTotal, Mode=OneWay, StringFormat={}{0:N2}}"/>
                                        </TextBlock>
                                    </Grid>

                                    <Separator Margin="0,0,0,14"/>

                                    <materialDesign:ColorZone Mode="PrimaryMid" CornerRadius="10" Padding="16,14">
                                        <StackPanel>
                                            <TextBlock Text="TOTAL A PAGAR" 
                                                       Style="{DynamicResource MaterialDesignOverlineTextBlock}" 
                                                       Opacity="0.8" Margin="0,0,0,4"/>
                                            <TextBlock Style="{DynamicResource MaterialDesignHeadline4TextBlock}">
                                                <Run Text="Kz"/>
                                                <Run Text="{Binding GrandTotal, Mode=OneWay, StringFormat={}{0:N2}}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </materialDesign:ColorZone>
                                </StackPanel>
                            </materialDesign:Card>

                            <!-- Payment Section -->
                            <materialDesign:Card Grid.Row="1" Margin="0,0,0,16" Padding="20"
                                                 materialDesign:ElevationAssist.Elevation="Dp2">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                        <materialDesign:PackIcon Kind="CreditCard" Width="20" Height="20" 
                                                                 VerticalAlignment="Center" Margin="0,0,10,0"/>
                                        <TextBlock Text="Adicionar Pagamento" 
                                                   Style="{DynamicResource MaterialDesignSubtitle1TextBlock}" 
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <ComboBox ItemsSource="{Binding PaymentTypes}" 
                                              SelectedItem="{Binding SelectedPaymentType}" 
                                              DisplayMemberPath="Name" 
                                              Style="{DynamicResource MaterialDesignOutlinedComboBox}"
                                              materialDesign:HintAssist.Hint="Forma de Pagamento"
                                              Margin="0,0,0,14"/>

                                    <TextBox Text="{Binding PaymentAmount, UpdateSourceTrigger=PropertyChanged, 
                                             Converter={StaticResource DecimalZeroWhenEmptyConverter}, StringFormat=N2}" 
                                             Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                                             materialDesign:HintAssist.Hint="Valor do Pagamento"
                                             Margin="0,0,0,14">
                                        <TextBox.InputBindings>
                                            <KeyBinding Key="Enter" Command="{Binding AddPaymentCommand}"/>
                                        </TextBox.InputBindings>
                                    </TextBox>

                                    <Button Command="{Binding AddPaymentCommand}"
                                            Style="{DynamicResource MaterialDesignRaisedButton}">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Plus"/>
                                            <TextBlock Text="Adicionar Pagamento" Margin="8,0,0,0"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </materialDesign:Card>

                            <!-- Payment Summary -->
                            <materialDesign:Card Grid.Row="2" Margin="0,0,0,16" Padding="20"
                                                 materialDesign:ElevationAssist.Elevation="Dp2">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,14">
                                        <materialDesign:PackIcon Kind="CashMultiple" Width="20" Height="20" 
                                                                 Foreground="Green"
                                                                 VerticalAlignment="Center" Margin="0,0,10,0"/>
                                        <TextBlock Text="Status do Pagamento" 
                                                   Style="{DynamicResource MaterialDesignSubtitle1TextBlock}" 
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>

                                    <Border Background="{DynamicResource MaterialDesignCardBackground}" 
                                            CornerRadius="8" Padding="12" Margin="0,0,0,14"
                                            Visibility="{Binding Payments.Count, Converter={StaticResource CountToVisibilityConverter}}">
                                        <StackPanel>
                                            <TextBlock Text="Pagamentos Registrados" 
                                                       Style="{DynamicResource MaterialDesignOverlineTextBlock}" 
                                                       Margin="0,0,0,10"/>
                                            <ItemsControl ItemsSource="{Binding Payments}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <materialDesign:Card Padding="10,8" Margin="0,0,0,6"
                                                                             materialDesign:ElevationAssist.Elevation="Dp1">
                                                            <Grid>
                                                                <TextBlock Text="{Binding PaymentTypeName}" 
                                                                           FontWeight="Medium" VerticalAlignment="Center"/>
                                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                                    <TextBlock FontWeight="Bold" Foreground="Green" 
                                                                               VerticalAlignment="Center" Margin="0,0,8,0">
                                                                        <Run Text="Kz"/>
                                                                        <Run Text="{Binding Amount, StringFormat={}{0:N2}}"/>
                                                                    </TextBlock>
                                                                    <Button Style="{DynamicResource MaterialDesignIconButton}"
                                                                            Width="24" Height="24"
                                                                            Command="{Binding DataContext.RemovePaymentCommand, 
                                                                            RelativeSource={RelativeSource AncestorType=ItemsControl}}" 
                                                                            CommandParameter="{Binding}" ToolTip="Remover">
                                                                        <materialDesign:PackIcon Kind="Close" Width="12" Height="12" 
                                                                                                 Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"/>
                                                                    </Button>
                                                                </StackPanel>
                                                            </Grid>
                                                        </materialDesign:Card>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Border>

                                    <StackPanel Margin="0,0,0,10">
                                        <TextBlock Text="Valor Pago" 
                                                   Style="{DynamicResource MaterialDesignOverlineTextBlock}" 
                                                   Margin="0,0,0,4"/>
                                        <TextBlock Style="{DynamicResource MaterialDesignHeadline6TextBlock}" Foreground="Green">
                                            <Run Text="Kz"/>
                                            <Run Text="{Binding AmountPaid, Mode=OneWay, StringFormat={}{0:N2}}"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <StackPanel Margin="0,0,0,10">
                                        <TextBlock Text="Restante" 
                                                   Style="{DynamicResource MaterialDesignOverlineTextBlock}" 
                                                   Margin="0,0,0,4"/>
                                        <TextBlock Style="{DynamicResource MaterialDesignHeadline6TextBlock}" Foreground="Orange">
                                            <Run Text="Kz"/>
                                            <Run Text="{Binding RemainingAmount, Mode=OneWay, StringFormat={}{0:N2}}"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <materialDesign:ColorZone Mode="Light" CornerRadius="8" Padding="12,10">
                                        <StackPanel>
                                            <TextBlock Text="Troco a Devolver" 
                                                       Style="{DynamicResource MaterialDesignOverlineTextBlock}" 
                                                       Margin="0,0,0,4"/>
                                            <TextBlock Style="{DynamicResource MaterialDesignHeadline5TextBlock}" 
                                                       Foreground="{DynamicResource PrimaryHueMidBrush}">
                                                <Run Text="Kz"/>
                                                <Run Text="{Binding ChangeDue, Mode=OneWay, StringFormat={}{0:N2}}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </materialDesign:ColorZone>
                                </StackPanel>
                            </materialDesign:Card>

                            <!-- Finalize Sale Button -->
                            <Button Grid.Row="3" Command="{Binding FinalizeSaleCommand}" Height="56"
                                    Style="{DynamicResource MaterialDesignRaisedButton}">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <materialDesign:PackIcon Kind="CheckCircle" Width="24" Height="24" VerticalAlignment="Center"/>
                                    <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="FINALIZAR VENDA" FontWeight="Bold"/>
                                        <TextBlock Text="Pressione F9" 
                                                   Style="{DynamicResource MaterialDesignCaptionTextBlock}" 
                                                   Opacity="0.8"/>
                                    </StackPanel>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Grid>

        <!-- Product Catalog Modal -->
        <materialDesign:DialogHost x:Name="ProductCatalogOverlay"
                                   IsOpen="{Binding IsCatalogOpen}"
                                   CloseOnClickAway="True">
            <materialDesign:DialogHost.DialogContent>
                <Grid MaxWidth="1200" MaxHeight="800" MinWidth="900" MinHeight="600">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Modal Header -->
                    <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryMid" Padding="24,20">
                        <Grid>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="ViewGrid" Width="28" Height="28" Margin="0,0,14,0"/>
                                <StackPanel>
                                    <TextBlock Text="Catálogo de Produtos" 
                                               Style="{DynamicResource MaterialDesignHeadline6TextBlock}"/>
                                    <TextBlock Text="Selecione um produto para adicionar ao carrinho" 
                                               Style="{DynamicResource MaterialDesignCaptionTextBlock}" Opacity="0.8"/>
                                </StackPanel>
                            </StackPanel>
                            <Button Style="{DynamicResource MaterialDesignIconButton}" 
                                    HorizontalAlignment="Right" 
                                    Command="{Binding CloseCatalogCommand}">
                                <materialDesign:PackIcon Kind="Close" Width="20" Height="20" Foreground="White"/>
                            </Button>
                        </Grid>
                    </materialDesign:ColorZone>

                    <!-- Search Bar -->
                    <Border Grid.Row="1" Padding="24,18" Background="{DynamicResource MaterialDesignCardBackground}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0" x:Name="CatalogSearchBox" 
                                     Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                                     materialDesign:HintAssist.Hint="Pesquisar produtos por nome, código..." 
                                     Text="{Binding CatalogSearchTerm, UpdateSourceTrigger=PropertyChanged}"/>

                            <ComboBox Grid.Column="2" 
                                      Style="{DynamicResource MaterialDesignOutlinedComboBox}" 
                                      ItemsSource="{Binding CatalogCategories}" 
                                      SelectedItem="{Binding SelectedCatalogCategory}" 
                                      DisplayMemberPath="Name"
                                      materialDesign:HintAssist.Hint="Categoria"/>
                        </Grid>
                    </Border>

                    <!-- Product Grid -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="24,16">
                        <ItemsControl x:Name="ProductCatalogItems" ItemsSource="{Binding CatalogProducts}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <materialDesign:Card Width="260" Height="310" Margin="8" Padding="16"
                                                         materialDesign:ElevationAssist.Elevation="Dp2">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="160"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Product Image -->
                                            <Border Grid.Row="0" Background="{DynamicResource MaterialDesignCardBackground}" 
                                                    CornerRadius="8" Margin="0,0,0,12" ClipToBounds="True">
                                                <Grid>
                                                    <Image Source="{Binding PhotoUrl, Converter={StaticResource StringToImageSourceConverter}}" 
                                                           Stretch="UniformToFill"/>
                                                    <materialDesign:Chip HorizontalAlignment="Right" VerticalAlignment="Top" 
                                                                         Margin="10" IconBackground="Green">
                                                        <materialDesign:Chip.Icon>
                                                            <materialDesign:PackIcon Kind="Package" Width="12" Height="12"/>
                                                        </materialDesign:Chip.Icon>
                                                        <TextBlock Text="{Binding CurrentStock, StringFormat={}{0} un.}" 
                                                                   FontSize="10" FontWeight="Bold"/>
                                                    </materialDesign:Chip>
                                                </Grid>
                                            </Border>

                                            <!-- Product Info -->
                                            <StackPanel Grid.Row="1">
                                                <TextBlock Text="{Binding Name}" FontWeight="SemiBold" 
                                                           TextWrapping="Wrap" MaxHeight="38" 
                                                           TextTrimming="CharacterEllipsis" Margin="0,0,0,6"/>
                                                <TextBlock Text="{Binding SKU}" 
                                                           Style="{DynamicResource MaterialDesignCaptionTextBlock}" 
                                                           Margin="0,0,0,10"/>
                                                <TextBlock Style="{DynamicResource MaterialDesignHeadline6TextBlock}" 
                                                           Foreground="{DynamicResource PrimaryHueMidBrush}">
                                                    <Run Text="Kz"/>
                                                    <Run Text="{Binding SalePrice, StringFormat={}{0:N2}}"/>
                                                </TextBlock>
                                            </StackPanel>

                                            <!-- Add Button -->
                                            <Button Grid.Row="2" 
                                                    Style="{DynamicResource MaterialDesignRaisedButton}" 
                                                    Margin="0,10,0,0"
                                                    Command="{Binding DataContext.AddProductFromCatalogCommand, 
                                                    RelativeSource={RelativeSource AncestorType=ItemsControl}}" 
                                                    CommandParameter="{Binding}">
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="CartPlus"/>
                                                    <TextBlock Text="Adicionar" Margin="8,0,0,0"/>
                                                </StackPanel>
                                            </Button>
                                        </Grid>
                                    </materialDesign:Card>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Toast Feedback -->
                    <materialDesign:Snackbar Grid.Row="2" 
                                             HorizontalAlignment="Center" VerticalAlignment="Bottom"
                                             IsActive="{Binding IsCatalogToastVisible}"
                                             Message="{Binding CatalogToastMessage}"/>
                </Grid>
            </materialDesign:DialogHost.DialogContent>
        </materialDesign:DialogHost>

        <!-- Footer with Snackbar -->
        <materialDesign:ColorZone Grid.Row="1" Mode="Light" Height="56" 
                                  materialDesign:ElevationAssist.Elevation="Dp2">
            <Grid Margin="24,0">
                <materialDesign:Snackbar x:Name="StatusSnackbar"
                                         MessageQueue="{materialDesign:MessageQueue}" 
                                         VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <materialDesign:PackIcon Kind="Information" Width="14" Height="14" 
                                             VerticalAlignment="Center" Margin="0,0,8,0" Opacity="0.6"/>
                    <TextBlock Text="Pressione F1 para ajuda" 
                               Style="{DynamicResource MaterialDesignCaptionTextBlock}" 
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </materialDesign:ColorZone>

        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="2" Background="#E6000000" 
              Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}" 
              Panel.ZIndex="1000">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar Style="{DynamicResource MaterialDesignCircularProgressBar}" 
                             IsIndeterminate="True" Width="56" Height="56"/>
                <TextBlock Text="{Binding StatusMessage}" 
                           Style="{DynamicResource MaterialDesignSubtitle1TextBlock}" 
                           Foreground="White" Margin="0,20,0,0" TextAlignment="Center" 
                           MaxWidth="400" TextWrapping="Wrap"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>