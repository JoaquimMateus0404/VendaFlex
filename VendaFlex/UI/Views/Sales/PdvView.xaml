<Page x:Class="VendaFlex.UI.Views.Sales.PdvView"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
 xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 xmlns:converters="clr-namespace:VendaFlex.UI.Converters"
 xmlns:infconv="clr-namespace:VendaFlex.Infrastructure.Converters"
 mc:Ignorable="d" Loaded="Page_Loaded" d:DesignHeight="1413.143" d:DesignWidth="1332.487">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/GlobalStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Color Palette - Soft & Professional -->
            <SolidColorBrush x:Key="PdvBackground" Color="#F8F9FA"/>
            <SolidColorBrush x:Key="PdvCardBg" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="PdvCardBorder" Color="#E9ECEF"/>
            <SolidColorBrush x:Key="PdvHeaderBg" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="PdvPrimary" Color="#4F46E5"/>
            <SolidColorBrush x:Key="PdvPrimaryHover" Color="#4338CA"/>
            <SolidColorBrush x:Key="PdvSuccess" Color="#10B981"/>
            <SolidColorBrush x:Key="PdvSuccessLight" Color="#D1FAE5"/>
            <SolidColorBrush x:Key="PdvWarning" Color="#F59E0B"/>
            <SolidColorBrush x:Key="PdvWarningLight" Color="#FEF3C7"/>
            <SolidColorBrush x:Key="PdvError" Color="#EF4444"/>
            <SolidColorBrush x:Key="PdvTextPrimary" Color="#1F2937"/>
            <SolidColorBrush x:Key="PdvTextSecondary" Color="#6B7280"/>
            <SolidColorBrush x:Key="PdvTextTertiary" Color="#9CA3AF"/>
            <SolidColorBrush x:Key="PdvDivider" Color="#E5E7EB"/>
            <SolidColorBrush x:Key="PdvInputBg" Color="#F9FAFB"/>
            <SolidColorBrush x:Key="PdvInputBorder" Color="#D1D5DB"/>

            <!-- Converters -->
            <converters:HeightToScrollBarVisibilityConverter x:Key="HeightToScrollBarVisibilityConverter"/>
            <infconv:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
            <infconv:DecimalZeroWhenEmptyConverter x:Key="DecimalZeroWhenEmptyConverter"/>
            <infconv:StringToImageSourceConverter x:Key="StringToImageSourceConverter"/>

            <!-- Modern Card Style -->
            <Style x:Key="ModernCard" TargetType="Border">
                <Setter Property="Background" Value="{StaticResource PdvCardBg}"/>
                <Setter Property="BorderBrush" Value="{StaticResource PdvCardBorder}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="12"/>
                <Setter Property="Padding" Value="20"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.06" Color="#000000"/>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Primary Button Style -->
            <Style x:Key="ModernPrimaryButton" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource PdvPrimary}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="20,12"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                      CornerRadius="10" 
                      BorderThickness="0">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{StaticResource PdvPrimaryHover}"/>
                    </Trigger>
                    <Trigger Property="IsEnabled" Value="False">
                        <Setter Property="Opacity" Value="0.5"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- Secondary Button Style -->
            <Style x:Key="ModernSecondaryButton" TargetType="Button">
                <Setter Property="Background" Value="{StaticResource PdvInputBg}"/>
                <Setter Property="Foreground" Value="{StaticResource PdvTextSecondary}"/>
                <Setter Property="BorderBrush" Value="{StaticResource PdvInputBorder}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="16,10"/>
                <Setter Property="FontWeight" Value="Medium"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" 
                      BorderBrush="{TemplateBinding BorderBrush}"
                      BorderThickness="{TemplateBinding BorderThickness}"
                      CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#F3F4F6"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- Modern TextBox Style -->
            <Style x:Key="ModernTextBox" TargetType="TextBox">
                <Setter Property="Background" Value="{StaticResource PdvInputBg}"/>
                <Setter Property="Foreground" Value="{StaticResource PdvTextPrimary}"/>
                <Setter Property="BorderBrush" Value="{StaticResource PdvInputBorder}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="12,10"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Border Background="{TemplateBinding Background}"
                      BorderBrush="{TemplateBinding BorderBrush}"
                      BorderThickness="{TemplateBinding BorderThickness}"
                      CornerRadius="8">
                                <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsFocused" Value="True">
                        <Setter Property="BorderBrush" Value="{StaticResource PdvPrimary}"/>
                        <Setter Property="Background" Value="White"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- Modern ComboBox Style -->
            <Style x:Key="ModernComboBox" TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignComboBox}">
                <Setter Property="Background" Value="{StaticResource PdvInputBg}"/>
                <Setter Property="Foreground" Value="{StaticResource PdvTextPrimary}"/>
                <Setter Property="BorderBrush" Value="{StaticResource PdvInputBorder}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="12,10"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Height" Value="44"/>
            </Style>

            <!-- Product Card in Catalog -->
            <Style x:Key="ProductCard" TargetType="Border">
                <Setter Property="Background" Value="{StaticResource PdvCardBg}"/>
                <Setter Property="BorderBrush" Value="{StaticResource PdvCardBorder}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="12"/>
                <Setter Property="Padding" Value="16"/>
                <Setter Property="Margin" Value="8"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.04" Color="#000000"/>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Effect">
                            <Setter.Value>
                                <DropShadowEffect BlurRadius="16" ShadowDepth="0" Opacity="0.1" Color="#4F46E5"/>
                            </Setter.Value>
                        </Setter>
                    </Trigger>
                </Style.Triggers>
            </Style>

        </ResourceDictionary>
    </Page.Resources>

    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Content -->
        <Grid Grid.Row="0" Background="{StaticResource PdvBackground}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="{StaticResource PdvHeaderBg}" BorderBrush="{StaticResource PdvDivider}" BorderThickness="0,0,0,1">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.04" Color="#000000"/>
                    </Border.Effect>
                    <Grid Height="72" Margin="24,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Logo + Title -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <Border Width="42" Height="42" CornerRadius="10" Background="{StaticResource PdvPrimary}" Margin="0,0,14,0">
                                <materialDesign:PackIcon Kind="CashRegister" Width="24" Height="24" Foreground="White" 
                                         HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="Ponto de Venda" FontSize="18" FontWeight="SemiBold" 
                          Foreground="{StaticResource PdvTextPrimary}"/>
                                <TextBlock Text="Sistema de vendas" FontSize="12" 
                          Foreground="{StaticResource PdvTextSecondary}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Center - Time -->
                        <Border Grid.Column="1" Background="{StaticResource PdvInputBg}" 
                    CornerRadius="8" Padding="14,8" HorizontalAlignment="Center" VerticalAlignment="Center"
                    BorderBrush="{StaticResource PdvCardBorder}" BorderThickness="1">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Clock" Width="16" Height="16" 
                                        Foreground="{StaticResource PdvTextSecondary}" 
                                        VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock x:Name="CurrentTimeText" Text="{Binding CurrentTime}" 
                          FontSize="13" FontWeight="Medium" 
                          Foreground="{StaticResource PdvTextPrimary}" 
                          VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Right - User & Actions -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                            <Border Background="{StaticResource PdvInputBg}" CornerRadius="10" Padding="12,8" Margin="0,0,12,0"
                      BorderBrush="{StaticResource PdvCardBorder}" BorderThickness="1">
                                <StackPanel Orientation="Horizontal">
                                    <Border Width="32" Height="32" CornerRadius="16" Margin="0,0,10,0"
                          Background="{StaticResource PdvPrimary}">
                                        <TextBlock x:Name="UserInitials" Text="{Binding UserInitials}" 
                              FontSize="13" FontWeight="Bold" Foreground="White" 
                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock x:Name="UserNameText" Text="{Binding UserName}" 
                              FontSize="13" FontWeight="SemiBold" 
                              Foreground="{StaticResource PdvTextPrimary}"/>
                                        <TextBlock Text="Operador" FontSize="11" 
                              Foreground="{StaticResource PdvTextSecondary}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <Button x:Name="ProductCatalogButton" Width="42" Height="42" 
                      Style="{DynamicResource MaterialDesignIconButton}" 
                      ToolTip="Catálogo de Produtos" 
                      Command="{Binding OpenCatalogCommand}">
                                <materialDesign:PackIcon Kind="ViewGrid" Width="22" Height="22" 
                                        Foreground="{StaticResource PdvPrimary}"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Main Content Area -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="{Binding ElementName=RootGrid, Path=ActualHeight, 
                      Converter={StaticResource HeightToScrollBarVisibilityConverter}, ConverterParameter=720}">
                    <Grid Margin="24,20" MinHeight="{Binding ElementName=RootGrid, Path=ActualHeight}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="1.2*"/>
                        </Grid.ColumnDefinitions>

                        <!-- LEFT PANEL -->
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Customer Selection -->
                            <Border Grid.Row="0" Style="{StaticResource ModernCard}" Margin="0,0,0,16">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0" Margin="0,0,0,14">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Account" Width="20" Height="20" 
                                              Foreground="{StaticResource PdvPrimary}" 
                                              VerticalAlignment="Center" Margin="0,0,10,0"/>
                                            <TextBlock Text="Cliente" FontSize="15" FontWeight="SemiBold" 
                                Foreground="{StaticResource PdvTextPrimary}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <Button Content="Consumidor Final" Style="{StaticResource ModernSecondaryButton}" 
                            FontSize="12" HorizontalAlignment="Right" Height="32" Padding="12,6"
                            Command="{Binding SelectAnonymousCustomerCommand}"/>
                                    </Grid>

                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="12"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox Grid.Column="0" x:Name="CustomerSearchBox" 
                             Style="{StaticResource ModernTextBox}" Height="44"
                             Tag="Buscar cliente por nome, NIF..." 
                             Text="{Binding CustomerSearchTerm, UpdateSourceTrigger=PropertyChanged}"/>

                                        <Popup IsOpen="{Binding CustomerSuggestions.Count, Mode=OneWay, Converter={StaticResource CountToBoolConverter}}"
                           PlacementTarget="{Binding ElementName=CustomerSearchBox}"
                           Placement="Bottom" StaysOpen="False" AllowsTransparency="True">
                                            <Border Background="White" CornerRadius="8" BorderThickness="1" 
                              BorderBrush="{StaticResource PdvCardBorder}" MaxHeight="300" MinWidth="400"
                              Effect="{DynamicResource MaterialDesignShadowDepth2}">
                                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                                    <ItemsControl ItemsSource="{Binding CustomerSuggestions}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Button Command="{Binding DataContext.SelectCustomerFromSuggestionsCommand, 
                                        RelativeSource={RelativeSource AncestorType=Page}}"
                                        CommandParameter="{Binding}" Style="{DynamicResource MaterialDesignFlatButton}"
                                        Padding="5" HorizontalContentAlignment="Left">
                                                                    <StackPanel>
                                                                        <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="13"/>
                                                                        <TextBlock Text="{Binding TaxId}" FontSize="12" 
                                              Foreground="{StaticResource PdvTextSecondary}"/>
                                                                    </StackPanel>
                                                                </Button>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </ScrollViewer>
                                            </Border>
                                        </Popup>

                                        <Border Grid.Column="2" Background="{StaticResource PdvSuccessLight}" 
                            CornerRadius="8" Padding="12" Height="44"
                            Visibility="{Binding SelectedCustomer, Converter={StaticResource NullToVisibilityConverter}}"
                            BorderBrush="{StaticResource PdvSuccess}" BorderThickness="1">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <materialDesign:PackIcon Kind="CheckCircle" Width="18" Height="18" 
                                                Foreground="{StaticResource PdvSuccess}" Margin="0,0,8,0"/>
                                                <TextBlock Text="{Binding SelectedCustomer.Name}" FontWeight="SemiBold" FontSize="13" 
                                  Foreground="{StaticResource PdvSuccess}"/>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </Grid>
                            </Border>

                            <!-- Quick Product Add -->
                            <Border Grid.Row="1" Style="{StaticResource ModernCard}" Margin="0,0,0,16">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0" Margin="0,0,0,14">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Barcode" Width="20" Height="20" 
                                              Foreground="{StaticResource PdvPrimary}" 
                                              VerticalAlignment="Center" Margin="0,0,10,0"/>
                                            <TextBlock Text="Adicionar Produto" FontSize="15" FontWeight="SemiBold" 
                                Foreground="{StaticResource PdvTextPrimary}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <Button Content="Catálogo →" Style="{StaticResource ModernSecondaryButton}" 
                            FontSize="12" HorizontalAlignment="Right" Height="32" Padding="12,6"
                            Command="{Binding OpenCatalogCommand}"/>
                                    </Grid>

                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="12"/>
                                            <ColumnDefinition Width="130"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox Grid.Column="0" x:Name="ProductSearchBox" 
                             Style="{StaticResource ModernTextBox}" Height="44"
                             Tag="Código / SKU / Nome..." 
                             Text="{Binding ProductSearchTerm, UpdateSourceTrigger=PropertyChanged}">
                                            <TextBox.InputBindings>
                                                <KeyBinding Key="Enter" Command="{Binding AddProductByCodeCommand}"/>
                                            </TextBox.InputBindings>
                                        </TextBox>

                                        <Popup IsOpen="{Binding ProductSuggestions.Count, Mode=OneWay, Converter={StaticResource CountToBoolConverter}}"
                           PlacementTarget="{Binding ElementName=ProductSearchBox}"
                           Placement="Bottom" StaysOpen="False" AllowsTransparency="True">
                                            <Border Background="White" CornerRadius="8" BorderThickness="1" 
                              BorderBrush="{StaticResource PdvCardBorder}" MaxHeight="300" MinWidth="400"
                              Effect="{DynamicResource MaterialDesignShadowDepth2}">
                                                <ListBox ItemsSource="{Binding ProductSuggestions}" 
                                SelectedItem="{Binding SelectedProductSuggestion}"
                                BorderThickness="0" Background="Transparent">
                                                    <ListBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <Grid Margin="10">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>
                                                                <StackPanel Grid.Column="0">
                                                                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="13"/>
                                                                    <TextBlock Text="{Binding Barcode}" FontSize="11" 
                                            Foreground="{StaticResource PdvTextSecondary}"/>
                                                                </StackPanel>
                                                                <TextBlock Grid.Column="1" Text="{Binding SalePrice, StringFormat=Kz {0:N2}}" 
                                          FontWeight="Bold" FontSize="14" 
                                          Foreground="{StaticResource PdvPrimary}" VerticalAlignment="Center"/>
                                                            </Grid>
                                                        </DataTemplate>
                                                    </ListBox.ItemTemplate>
                                                    <ListBox.InputBindings>
                                                        <KeyBinding Key="Enter" Command="{Binding AddSelectedSuggestionCommand}"/>
                                                    </ListBox.InputBindings>
                                                </ListBox>
                                            </Border>
                                        </Popup>

                                        <Button Grid.Column="2" Style="{StaticResource ModernPrimaryButton}" 
                            Command="{Binding AddProductByCodeCommand}" Height="44">
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Kind="Plus" Width="18" Height="18" VerticalAlignment="Center"/>
                                                <TextBlock Text="Adicionar" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Button>
                                    </Grid>
                                </Grid>
                            </Border>

                            <!-- Shopping Cart -->
                            <Border Grid.Row="2" Style="{StaticResource ModernCard}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0" Margin="0,0,0,16">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Cart" Width="20" Height="20" 
                                              Foreground="{StaticResource PdvPrimary}" 
                                              VerticalAlignment="Center" Margin="0,0,10,0"/>
                                            <TextBlock Text="Carrinho de Compras" FontSize="15" FontWeight="SemiBold" 
                                Foreground="{StaticResource PdvTextPrimary}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <Border Background="{StaticResource PdvInputBg}" CornerRadius="20" Padding="10,6" 
                            HorizontalAlignment="Right" BorderBrush="{StaticResource PdvCardBorder}" BorderThickness="1">
                                            <TextBlock FontSize="13" FontWeight="SemiBold" Foreground="{StaticResource PdvTextPrimary}">
                        <Run Text="{Binding CartItems.Count, Mode=OneWay}"/>
                        <Run Text="itens"/>
                                            </TextBlock>
                                        </Border>
                                    </Grid>

                                    <Border Grid.Row="1" Background="{StaticResource PdvInputBg}" CornerRadius="10" 
                          BorderBrush="{StaticResource PdvCardBorder}" BorderThickness="1">
                                        <DataGrid ItemsSource="{Binding CartItems}"
                              AutoGenerateColumns="False" HeadersVisibility="Column"
                              CanUserAddRows="False" CanUserDeleteRows="False"
                              SelectionMode="Single" RowHeaderWidth="0"
                              GridLinesVisibility="None" Background="Transparent"
                              Foreground="{StaticResource PdvTextPrimary}"
                              BorderThickness="0" VerticalScrollBarVisibility="Auto">
                                            <DataGrid.ColumnHeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="Foreground" Value="{StaticResource PdvTextSecondary}"/>
                                                    <Setter Property="FontSize" Value="12"/>
                                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                                    <Setter Property="Padding" Value="12,10"/>
                                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                                    <Setter Property="BorderBrush" Value="{StaticResource PdvDivider}"/>
                                                </Style>
                                            </DataGrid.ColumnHeaderStyle>
                                            <DataGrid.RowStyle>
                                                <Style TargetType="DataGridRow">
                                                    <Setter Property="Height" Value="52"/>
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="BorderBrush" Value="{StaticResource PdvDivider}"/>
                                                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#F9FAFB"/>
                                                        </Trigger>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter Property="Background" Value="#EEF2FF"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </DataGrid.RowStyle>
                                            <DataGrid.CellStyle>
                                                <Style TargetType="DataGridCell">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="BorderThickness" Value="0"/>
                                                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                                    <Setter Property="Padding" Value="12,0"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter Property="Background" Value="Transparent"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </DataGrid.CellStyle>
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Produto" Binding="{Binding Name}" Width="*" IsReadOnly="True">
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="FontWeight" Value="Medium"/>
                                                            <Setter Property="FontSize" Value="13"/>
                                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                                <DataGridTemplateColumn Header="Qtd" Width="120">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                                <Button Style="{DynamicResource MaterialDesignIconButton}" 
                                        Width="26" Height="26" Padding="0"
                                        Command="{Binding DataContext.DecreaseItemQtyCommand, 
                                        RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                        CommandParameter="{Binding}">
                                                                    <materialDesign:PackIcon Kind="Minus" Width="14" Height="14"/>
                                                                </Button>
                                                                <TextBox Text="{Binding Quantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                        Width="44" HorizontalContentAlignment="Center" 
                                        VerticalContentAlignment="Center" FontWeight="SemiBold" 
                                        Margin="6,0" FontSize="13"/>
                                                                <Button Style="{DynamicResource MaterialDesignIconButton}" 
                                        Width="26" Height="26" Padding="0"
                                        Command="{Binding DataContext.IncreaseItemQtyCommand, 
                                        RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                        CommandParameter="{Binding}">
                                                                    <materialDesign:PackIcon Kind="Plus" Width="14" Height="14"/>
                                                                </Button>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                                <DataGridTextColumn Header="Preço Unit." Binding="{Binding UnitPrice, StringFormat=Kz {0:N2}}" 
                                           Width="110" IsReadOnly="True">
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                            <Setter Property="FontSize" Value="13"/>
                                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                                <DataGridTemplateColumn Header="Desconto" Width="110">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding Discount, StringFormat=Kz {0:N2}}" 
                                        HorizontalAlignment="Right" FontSize="13"/>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                    <DataGridTemplateColumn.CellEditingTemplate>
                                                        <DataTemplate>
                                                            <TextBox Text="{Binding Discount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, 
                                      Converter={StaticResource DecimalZeroWhenEmptyConverter}, StringFormat=N2}" 
                                      HorizontalContentAlignment="Right" FontSize="13"/>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellEditingTemplate>
                                                </DataGridTemplateColumn>
                                                <DataGridTextColumn Header="Total" Binding="{Binding LineTotal, StringFormat=Kz {0:N2}}" 
                                           Width="120" IsReadOnly="True">
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                            <Setter Property="FontWeight" Value="Bold"/>
                                                            <Setter Property="FontSize" Value="14"/>
                                                            <Setter Property="Foreground" Value="{StaticResource PdvPrimary}"/>
                                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                                <DataGridTemplateColumn Header="Ações" Width="70">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <Button Style="{DynamicResource MaterialDesignIconButton}" 
                                      Width="30" Height="30" Padding="0"
                                      Command="{Binding DataContext.RemoveItemCommand, 
                                      RelativeSource={RelativeSource AncestorType=DataGrid}}" 
                                      CommandParameter="{Binding}" ToolTip="Remover">
                                                                <materialDesign:PackIcon Kind="Delete" Width="16" Height="16" 
                                                        Foreground="{StaticResource PdvError}"/>
                                                            </Button>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </Border>

                                    <Button Grid.Row="2" Style="{StaticResource ModernSecondaryButton}" 
                          Width="140" Height="40" Margin="0,16,0,0"
                          Command="{Binding ClearCartCommand}">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Delete" Width="16" Height="16"/>
                                            <TextBlock Text="Limpar Tudo" Margin="8,0,0,0"/>
                                        </StackPanel>
                                    </Button>
                                </Grid>
                            </Border>
                        </Grid>

                        <!-- RIGHT PANEL -->
                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Order Summary -->
                            <Border Grid.Row="0" Style="{StaticResource ModernCard}" Margin="0,0,0,16">
                                <StackPanel>
                                    <Grid Margin="0,0,0,16">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Receipt" Width="20" Height="20" 
                                              Foreground="{StaticResource PdvPrimary}" 
                                              VerticalAlignment="Center" Margin="0,0,10,0"/>
                                            <TextBlock Text="Resumo do Pedido" FontSize="15" FontWeight="SemiBold" 
                                Foreground="{StaticResource PdvTextPrimary}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>

                                    <Grid Margin="0,0,0,10">
                                        <TextBlock Text="Subtotal" FontSize="13" 
                              Foreground="{StaticResource PdvTextSecondary}"/>
                                        <TextBlock HorizontalAlignment="Right" FontSize="14" FontWeight="Medium" 
                              Foreground="{StaticResource PdvTextPrimary}">
                      <Run Text="Kz"/>
                      <Run Text="{Binding SubTotal, Mode=OneWay, StringFormat={}{0:N2}}"/>
                                        </TextBlock>
                                    </Grid>

                                    <Grid Margin="0,0,0,10">
                                        <TextBlock Text="Descontos" FontSize="13" 
                              Foreground="{StaticResource PdvTextSecondary}"/>
                                        <TextBlock HorizontalAlignment="Right" FontSize="14" FontWeight="Medium" 
                              Foreground="{StaticResource PdvError}">
                      <Run Text="- Kz"/>
                      <Run Text="{Binding DiscountTotal, Mode=OneWay, StringFormat={}{0:N2}}"/>
                                        </TextBlock>
                                    </Grid>

                                    <Grid Margin="0,0,0,14">
                                        <TextBlock Text="Impostos" FontSize="13" 
                              Foreground="{StaticResource PdvTextSecondary}"/>
                                        <TextBlock HorizontalAlignment="Right" FontSize="14" FontWeight="Medium" 
                              Foreground="{StaticResource PdvTextPrimary}">
                      <Run Text="Kz"/>
                      <Run Text="{Binding TaxTotal, Mode=OneWay, StringFormat={}{0:N2}}"/>
                                        </TextBlock>
                                    </Grid>

                                    <Border Height="1" Background="{StaticResource PdvDivider}" Margin="0,0,0,14"/>

                                    <Border Background="{StaticResource PdvPrimary}" CornerRadius="10" Padding="16,14">
                                        <Grid>
                                            <StackPanel>
                                                <TextBlock Text="TOTAL A PAGAR" FontSize="10" FontWeight="Bold" 
                                  Foreground="White" Opacity="0.8" Margin="0,0,0,4"/>
                                                <TextBlock FontSize="28" FontWeight="Bold" Foreground="White">
                          <Run Text="Kz"/>
                          <Run Text="{Binding GrandTotal, Mode=OneWay, StringFormat={}{0:N2}}"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </StackPanel>
                            </Border>

                            <!-- Payment Section -->
                            <Border Grid.Row="1" Style="{StaticResource ModernCard}" Margin="0,0,0,16">
                                <StackPanel>
                                    <Grid Margin="0,0,0,16">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="CreditCard" Width="20" Height="20" 
                                              Foreground="{StaticResource PdvPrimary}" 
                                              VerticalAlignment="Center" Margin="0,0,10,0"/>
                                            <TextBlock Text="Adicionar Pagamento" FontSize="15" FontWeight="SemiBold" 
                                Foreground="{StaticResource PdvTextPrimary}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>

                                    <TextBlock Text="Forma de Pagamento" FontSize="12" FontWeight="Medium" 
                            Foreground="{StaticResource PdvTextSecondary}" Margin="0,0,0,6"/>
                                    <ComboBox ItemsSource="{Binding PaymentTypes}" 
                           SelectedItem="{Binding SelectedPaymentType}" 
                           DisplayMemberPath="Name" Style="{StaticResource ModernComboBox}"
                           Margin="0,0,0,14"/>

                                    <TextBlock Text="Valor do Pagamento" FontSize="12" FontWeight="Medium" 
                            Foreground="{StaticResource PdvTextSecondary}" Margin="0,0,0,6"/>
                                    <TextBox Text="{Binding PaymentAmount, UpdateSourceTrigger=PropertyChanged, 
                          Converter={StaticResource DecimalZeroWhenEmptyConverter}, StringFormat=N2}" 
                          Style="{StaticResource ModernTextBox}" Height="44" Margin="0,0,0,14">
                                        <TextBox.InputBindings>
                                            <KeyBinding Key="Enter" Command="{Binding AddPaymentCommand}"/>
                                        </TextBox.InputBindings>
                                    </TextBox>

                                    <Button Command="{Binding AddPaymentCommand}" Height="44"
                          Style="{StaticResource ModernPrimaryButton}">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="Plus" Width="18" Height="18"/>
                                            <TextBlock Text="Adicionar Pagamento" Margin="8,0,0,0"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Border>

                            <!-- Payment Summary -->
                            <Border Grid.Row="2" Style="{StaticResource ModernCard}" Margin="0,0,0,16">
                                <StackPanel>
                                    <Grid Margin="0,0,0,14">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="CashMultiple" Width="20" Height="20" 
                                              Foreground="{StaticResource PdvSuccess}" 
                                              VerticalAlignment="Center" Margin="0,0,10,0"/>
                                            <TextBlock Text="Status do Pagamento" FontSize="15" FontWeight="SemiBold" 
                                Foreground="{StaticResource PdvTextPrimary}" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Grid>

                                    <Border Background="{StaticResource PdvInputBg}" CornerRadius="8" Padding="12" 
                          Margin="0,0,0,14"
                          Visibility="{Binding Payments.Count, Converter={StaticResource CountToVisibilityConverter}}">
                                        <StackPanel>
                                            <TextBlock Text="Pagamentos Registrados" FontSize="11" FontWeight="SemiBold" 
                                Foreground="{StaticResource PdvTextSecondary}" Margin="0,0,0,10"/>
                                            <ItemsControl ItemsSource="{Binding Payments}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border Background="White" CornerRadius="6" Padding="10,8" Margin="0,0,0,6"
                                    BorderThickness="1" BorderBrush="{StaticResource PdvCardBorder}">
                                                            <Grid>
                                                                <TextBlock Text="{Binding PaymentTypeName}" FontWeight="Medium" FontSize="12" 
                                          Foreground="{StaticResource PdvTextPrimary}" VerticalAlignment="Center"/>
                                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                                    <TextBlock FontSize="13" FontWeight="Bold" 
                                            Foreground="{StaticResource PdvSuccess}" 
                                            VerticalAlignment="Center" Margin="0,0,8,0">
                                    <Run Text="Kz"/>
                                    <Run Text="{Binding Amount, StringFormat={}{0:N2}}"/>
                                                                    </TextBlock>
                                                                    <Button Width="24" Height="24" Padding="0" 
                                          Style="{DynamicResource MaterialDesignIconButton}"
                                          Command="{Binding DataContext.RemovePaymentCommand, 
                                          RelativeSource={RelativeSource AncestorType=ItemsControl}}" 
                                          CommandParameter="{Binding}" ToolTip="Remover">
                                                                        <materialDesign:PackIcon Kind="Close" Width="12" Height="12" 
                                                            Foreground="{StaticResource PdvError}"/>
                                                                    </Button>
                                                                </StackPanel>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Border>

                                    <Grid Margin="0,0,0,10">
                                        <StackPanel>
                                            <TextBlock Text="Valor Pago" FontSize="11" FontWeight="SemiBold" 
                                Foreground="{StaticResource PdvTextSecondary}" Margin="0,0,0,4"/>
                                            <TextBlock FontSize="18" FontWeight="Bold" Foreground="{StaticResource PdvSuccess}">
                        <Run Text="Kz"/>
                        <Run Text="{Binding AmountPaid, Mode=OneWay, StringFormat={}{0:N2}}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>

                                    <Grid Margin="0,0,0,10">
                                        <StackPanel>
                                            <TextBlock Text="Restante" FontSize="11" FontWeight="SemiBold" 
                                Foreground="{StaticResource PdvTextSecondary}" Margin="0,0,0,4"/>
                                            <TextBlock FontSize="18" FontWeight="Bold" Foreground="{StaticResource PdvWarning}">
                        <Run Text="Kz"/>
                        <Run Text="{Binding RemainingAmount, Mode=OneWay, StringFormat={}{0:N2}}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Grid>

                                    <Border Background="{StaticResource PdvInputBg}" CornerRadius="8" Padding="12,10"
                          BorderBrush="{StaticResource PdvCardBorder}" BorderThickness="1">
                                        <StackPanel>
                                            <TextBlock Text="Troco a Devolver" FontSize="11" FontWeight="SemiBold" 
                                Foreground="{StaticResource PdvTextSecondary}" Margin="0,0,0,4"/>
                                            <TextBlock FontSize="22" FontWeight="Bold" Foreground="{StaticResource PdvPrimary}">
                        <Run Text="Kz"/>
                        <Run Text="{Binding ChangeDue, Mode=OneWay, StringFormat={}{0:N2}}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Border>

                            <!-- Finalize Sale Button -->
                            <Button Grid.Row="3" Command="{Binding FinalizeSaleCommand}" Height="56"
                      Style="{StaticResource ModernPrimaryButton}">
                                <Grid>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <materialDesign:PackIcon Kind="CheckCircle" Width="24" Height="24" 
                                            Foreground="White" VerticalAlignment="Center"/>
                                        <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                                            <TextBlock Text="FINALIZAR VENDA" FontSize="15" FontWeight="Bold" 
                                Foreground="White"/>
                                            <TextBlock Text="Pressione F9" FontSize="10" Foreground="White" 
                                Opacity="0.8" Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Button>
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Grid>

        <!-- Product Catalog Modal -->
        <Grid x:Name="ProductCatalogOverlay"
          Visibility="{Binding IsCatalogOpen, Converter={StaticResource BooleanToVisibilityConverter}}" 
          Background="#CC000000">
            <Border MaxWidth="1200" MaxHeight="800" Background="White" 
              CornerRadius="16" BorderBrush="{StaticResource PdvCardBorder}" 
              BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.3" Color="#000000"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Modal Header -->
                    <Border Grid.Row="0" Background="{StaticResource PdvPrimary}" 
                  CornerRadius="16,16,0,0" Padding="24,20">
                        <Grid>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <materialDesign:PackIcon Kind="ViewGrid" Width="28" Height="28" 
                                        Foreground="White" Margin="0,0,14,0"/>
                                <StackPanel>
                                    <TextBlock Text="Catálogo de Produtos" FontSize="20" FontWeight="Bold" 
                            Foreground="White"/>
                                    <TextBlock Text="Selecione um produto para adicionar ao carrinho" 
                            FontSize="12" Foreground="White" Opacity="0.8"/>
                                </StackPanel>
                            </StackPanel>
                            <Button Style="{DynamicResource MaterialDesignIconButton}" 
                      Width="36" Height="36" HorizontalAlignment="Right" 
                      Command="{Binding CloseCatalogCommand}">
                                <materialDesign:PackIcon Kind="Close" Width="20" Height="20" Foreground="White"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Search Bar -->
                    <Border Grid.Row="1" Padding="24,18" Background="{StaticResource PdvInputBg}" 
                  BorderBrush="{StaticResource PdvDivider}" BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="16"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0" x:Name="CatalogSearchBox" 
                       Style="{StaticResource ModernTextBox}" Height="44"
                       Tag="Pesquisar produtos por nome, código..." 
                       Text="{Binding CatalogSearchTerm, UpdateSourceTrigger=PropertyChanged}"/>

                            <ComboBox Grid.Column="2" Style="{StaticResource ModernComboBox}" 
                       ItemsSource="{Binding CatalogCategories}" 
                       SelectedItem="{Binding SelectedCatalogCategory}" 
                       DisplayMemberPath="Name" Height="44"/>
                        </Grid>
                    </Border>

                    <!-- Product Grid -->
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="24,16">
                        <ItemsControl x:Name="ProductCatalogItems" ItemsSource="{Binding CatalogProducts}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource ProductCard}" Width="260" Height="310">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="160"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Product Image -->
                                            <Border Grid.Row="0" Background="{StaticResource PdvInputBg}" 
                              CornerRadius="8" Margin="0,0,0,12" ClipToBounds="True">
                                                <Grid>
                                                    <Image Source="{Binding PhotoUrl, Converter={StaticResource StringToImageSourceConverter}}" 
                                Stretch="UniformToFill"/>
                                                    <Border Background="{StaticResource PdvSuccessLight}" 
                                  CornerRadius="4" Padding="8,4" 
                                  HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"
                                  BorderBrush="{StaticResource PdvSuccess}" BorderThickness="1">
                                                        <TextBlock Text="{Binding CurrentStock, StringFormat={}{0} un.}" 
                                      FontSize="10" FontWeight="Bold" 
                                      Foreground="{StaticResource PdvSuccess}"/>
                                                    </Border>
                                                </Grid>
                                            </Border>

                                            <!-- Product Info -->
                                            <StackPanel Grid.Row="1">
                                                <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="SemiBold" 
                                  Foreground="{StaticResource PdvTextPrimary}" 
                                  TextWrapping="Wrap" MaxHeight="38" 
                                  TextTrimming="CharacterEllipsis" Margin="0,0,0,6"/>
                                                <TextBlock Text="{Binding SKU}" FontSize="11" 
                                  Foreground="{StaticResource PdvTextTertiary}" Margin="0,0,0,10"/>
                                                <TextBlock FontSize="20" FontWeight="Bold" 
                                  Foreground="{StaticResource PdvPrimary}">
                          <Run Text="Kz"/>
                          <Run Text="{Binding SalePrice, StringFormat={}{0:N2}}"/>
                                                </TextBlock>
                                            </StackPanel>

                                            <!-- Add Button -->
                                            <Button Grid.Row="2" Style="{StaticResource ModernPrimaryButton}" 
                              Height="38" Margin="0,10,0,0"
                              Command="{Binding DataContext.AddProductFromCatalogCommand, 
                              RelativeSource={RelativeSource AncestorType=ItemsControl}}" 
                              CommandParameter="{Binding}">
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="CartPlus" Width="16" Height="16"/>
                                                    <TextBlock Text="Adicionar" Margin="8,0,0,0" FontSize="13"/>
                                                </StackPanel>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Toast Feedback -->
                    <Border Grid.RowSpan="3" HorizontalAlignment="Center" VerticalAlignment="Bottom" 
                  Margin="0,0,0,24" Background="{StaticResource PdvSuccess}" 
                  CornerRadius="20" Padding="16,10" Panel.ZIndex="100">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsCatalogToastVisible}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.3" Color="#000000"/>
                        </Border.Effect>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CheckCircle" Width="18" Height="18" Foreground="White"/>
                            <TextBlock Text="{Binding CatalogToastMessage}" Margin="8,0,0,0" 
                        Foreground="White" FontWeight="SemiBold" FontSize="13"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer with Snackbar -->
        <Border Grid.Row="1" Background="{StaticResource PdvHeaderBg}" 
            BorderBrush="{StaticResource PdvDivider}" 
            BorderThickness="0,1,0,0" Height="56">
            <Border.Effect>
                <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.04" Color="#000000"/>
            </Border.Effect>
            <Grid Margin="24,0">
                <materialDesign:Snackbar x:Name="StatusSnackbar"
                                MessageQueue="{materialDesign:MessageQueue}" 
                                VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
                    <materialDesign:PackIcon Kind="Information" Width="14" Height="14" 
                                  Foreground="{StaticResource PdvTextTertiary}" 
                                  VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Pressione F1 para ajuda" FontSize="11" 
                    Foreground="{StaticResource PdvTextTertiary}" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Loading Overlay -->
        <Border Grid.RowSpan="2" Background="#E6000000" 
            Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}" 
            Panel.ZIndex="1000">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}" 
                    IsIndeterminate="True" Width="56" Height="56" 
                    Foreground="{StaticResource PdvPrimary}" SnapsToDevicePixels="True"/>
                <TextBlock Text="{Binding StatusMessage}" FontSize="15" FontWeight="Medium" 
                  Foreground="White" Margin="0,20,0,0" TextAlignment="Center" 
                  MaxWidth="400" TextWrapping="Wrap"  />
                
            </StackPanel>
        </Border>
    </Grid>
</Page>