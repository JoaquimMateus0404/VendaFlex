<Window x:Class="VendaFlex.UI.Views.Persons.PersonFormDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:converters="clr-namespace:VendaFlex.Infrastructure.Converters"
        xmlns:entities="clr-namespace:VendaFlex.Data.Entities"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}"
        Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVis"/>
        <converters:NullToVisibilityConverter x:Key="NullToVis"/>
    </Window.Resources>

    <Grid>
        <!-- Loading Overlay -->
        <Border Background="#CC000000" 
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"
                Panel.ZIndex="999">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                             Value="0"
                             IsIndeterminate="True"
                             Width="60" Height="60"
                             Foreground="#2196F3"/>
                <TextBlock Text="Processando..."
                           Foreground="White"
                           FontSize="16"
                           Margin="0,20,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="{Binding WindowTitle}"
                               Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                               FontWeight="Bold"/>
                    <TextBlock Text="{Binding WindowSubtitle}"
                               Style="{StaticResource MaterialDesignBody2TextBlock}"
                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Grid>

            <!-- Stepper (apenas para funcionários) -->
            <materialDesign:Card Grid.Row="1" 
                                 Padding="16" 
                                 Margin="0,0,0,24"
                                 Visibility="{Binding IsEmployee, Converter={StaticResource BoolToVis}}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Step 1 -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Border Width="32" Height="32" 
                                CornerRadius="16"
                                Margin="0,0,8,0">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="{DynamicResource PrimaryHueMidBrush}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CurrentStep}" Value="1">
                                            <Setter Property="Background" Value="#2196F3"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock Text="1" 
                                       Foreground="White" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Center"
                                       FontWeight="Bold"/>
                        </Border>
                        <TextBlock Text="Dados Pessoais" 
                                   VerticalAlignment="Center"
                                   FontWeight="Medium"/>
                    </StackPanel>

                    <!-- Divider 1 -->
                    <Rectangle Grid.Column="1" 
                               Height="2" 
                               Width="60"
                               Margin="16,0"
                               VerticalAlignment="Center">
                        <Rectangle.Style>
                            <Style TargetType="Rectangle">
                                <Setter Property="Fill" Value="{DynamicResource MaterialDesignDivider}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentStep}" Value="2">
                                        <Setter Property="Fill" Value="#2196F3"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding CurrentStep}" Value="3">
                                        <Setter Property="Fill" Value="#2196F3"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Rectangle.Style>
                    </Rectangle>

                    <!-- Step 2 -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Border Width="32" Height="32" 
                                CornerRadius="16"
                                Margin="0,0,8,0">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="{DynamicResource MaterialDesignDivider}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CurrentStep}" Value="2">
                                            <Setter Property="Background" Value="#2196F3"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding CurrentStep}" Value="3">
                                            <Setter Property="Background" Value="{DynamicResource PrimaryHueMidBrush}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock Text="2" 
                                       Foreground="White" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Center"
                                       FontWeight="Bold"/>
                        </Border>
                        <TextBlock Text="Criar Usuário" 
                                   VerticalAlignment="Center"
                                   FontWeight="Medium"/>
                    </StackPanel>

                    <!-- Divider 2 -->
                    <Rectangle Grid.Column="3" 
                               Height="2" 
                               Width="60"
                               Margin="16,0"
                               VerticalAlignment="Center">
                        <Rectangle.Style>
                            <Style TargetType="Rectangle">
                                <Setter Property="Fill" Value="{DynamicResource MaterialDesignDivider}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding CurrentStep}" Value="3">
                                        <Setter Property="Fill" Value="#2196F3"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Rectangle.Style>
                    </Rectangle>

                    <!-- Step 3 -->
                    <StackPanel Grid.Column="4" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Border Width="32" Height="32" 
                                CornerRadius="16"
                                Margin="0,0,8,0">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="{DynamicResource MaterialDesignDivider}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CurrentStep}" Value="3">
                                            <Setter Property="Background" Value="#2196F3"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock Text="3" 
                                       Foreground="White" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Center"
                                       FontWeight="Bold"/>
                        </Border>
                        <TextBlock Text="Privilégios" 
                                   VerticalAlignment="Center"
                                   FontWeight="Medium"/>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>

            <!-- Content Area -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <ContentControl Content="{Binding}">
                    <ContentControl.ContentTemplate>
                        <DataTemplate>
                            <Grid>
                                <!-- Step 1: Dados Pessoais -->
                                <StackPanel Visibility="{Binding ShowStep1, Converter={StaticResource BoolToVis}}">
                                    <!-- Foto de Perfil -->
                                    <materialDesign:Card Padding="20" Margin="0,0,0,24" UniformCornerRadius="12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Foto Preview -->
                                            <Border Grid.Column="0"
                                                    Width="120"
                                                    Height="120"
                                                    Background="#F1F5F9"
                                                    CornerRadius="60"
                                                    BorderBrush="#E2E8F0"
                                                    BorderThickness="2"
                                                    Margin="0,0,24,0">
                                                <Grid>
                                                    <!-- Placeholder -->
                                                    <StackPanel VerticalAlignment="Center"
                                                                HorizontalAlignment="Center">
                                                        <StackPanel.Style>
                                                            <Style TargetType="StackPanel">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding ProfileImageUrl, Converter={StaticResource NullToVis}}" Value="Visible">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </StackPanel.Style>
                                                        <materialDesign:PackIcon Kind="AccountCircle"
                                                                                Width="48"
                                                                                Height="48"
                                                                                Foreground="#94A3B8"/>
                                                        <TextBlock Text="Sem Foto"
                                                                   FontSize="11"
                                                                   Foreground="#94A3B8"
                                                                   HorizontalAlignment="Center"
                                                                   Margin="0,8,0,0"/>
                                                    </StackPanel>

                                                    <!-- Foto Image -->
                                                    <Border CornerRadius="60" ClipToBounds="True">
                                                        <Image Source="{Binding ProfileImageUrl}"
                                                               Stretch="UniformToFill">
                                                            <Image.Style>
                                                                <Style TargetType="Image">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding ProfileImageUrl, Converter={StaticResource NullToVis}}" Value="Visible">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Image.Style>
                                                        </Image>
                                                    </Border>
                                                </Grid>
                                            </Border>

                                            <!-- Foto Actions -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="Foto de Perfil"
                                                           FontSize="16"
                                                           FontWeight="SemiBold"
                                                           Foreground="#1E293B"
                                                           Margin="0,0,0,8"/>
                                                <TextBlock Text="Adicione uma foto para o perfil desta pessoa. A imagem será exibida nas informações do cadastro."
                                                           FontSize="13"
                                                           Foreground="#64748B"
                                                           TextWrapping="Wrap"
                                                           Margin="0,0,0,16"/>

                                                <StackPanel Orientation="Horizontal">
                                                    <Button Command="{Binding UploadPhotoCommand}"
                                                            Style="{StaticResource MaterialDesignOutlinedButton}"
                                                            Height="40"
                                                            Padding="20,0">
                                                        <StackPanel Orientation="Horizontal">
                                                            <materialDesign:PackIcon Kind="Upload"
                                                                                    Width="18"
                                                                                    Height="18"
                                                                                    VerticalAlignment="Center"/>
                                                            <TextBlock Text="Selecionar Foto"
                                                                       Margin="8,0,0,0"
                                                                       VerticalAlignment="Center"/>
                                                        </StackPanel>
                                                    </Button>

                                                    <Button Command="{Binding RemovePhotoCommand}"
                                                            Height="40"
                                                            Padding="20,0"
                                                            Margin="12,0,0,0">
                                                        <Button.Style>
                                                            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding ProfileImageUrl, Converter={StaticResource NullToVis}}" Value="Visible">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Button.Style>
                                                        <StackPanel Orientation="Horizontal">
                                                            <materialDesign:PackIcon Kind="Delete"
                                                                                    Width="18"
                                                                                    Height="18"
                                                                                    VerticalAlignment="Center"/>
                                                            <TextBlock Text="Remover"
                                                                       Margin="8,0,0,0"
                                                                       VerticalAlignment="Center"/>
                                                        </StackPanel>
                                                    </Button>
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                    </materialDesign:Card>

                                    <!-- Dados Básicos -->
                                    <TextBlock Text="Dados Básicos"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="#1E293B"
                                               Margin="0,0,0,12"/>
                                    
                                    <Grid Margin="0,0,0,24">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="16"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Tipo -->
                                        <ComboBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                                                  materialDesign:HintAssist.Hint="Tipo *"
                                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                                  SelectedValue="{Binding Type}"
                                                  SelectedValuePath="Tag"
                                                  Margin="0,0,0,16">
                                            <ComboBoxItem Content="Cliente" Tag="{x:Static entities:PersonType.Customer}"/>
                                            <ComboBoxItem Content="Fornecedor" Tag="{x:Static entities:PersonType.Supplier}"/>
                                            <ComboBoxItem Content="Funcionário" Tag="{x:Static entities:PersonType.Employee}"/>
                                            <ComboBoxItem Content="Cliente e Fornecedor" Tag="{x:Static entities:PersonType.Both}"/>
                                        </ComboBox>

                                        <!-- Nome -->
                                        <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                                                 Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                                 materialDesign:HintAssist.Hint="Nome Completo *"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 Margin="0,0,0,16"/>

                                        <!-- Email -->
                                        <TextBox Grid.Row="2" Grid.Column="0"
                                                 Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                                                 materialDesign:HintAssist.Hint="Email"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 Margin="0,0,0,16"/>

                                        <!-- Pessoa de Contato (para empresas) -->
                                        <TextBox Grid.Row="2" Grid.Column="2"
                                                 Text="{Binding ContactPerson, UpdateSourceTrigger=PropertyChanged}"
                                                 materialDesign:HintAssist.Hint="Pessoa de Contato"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 Margin="0,0,0,16"/>
                                    </Grid>

                                    <!-- Dados de Identificação -->
                                    <TextBlock Text="Dados de Identificação"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="#1E293B"
                                               Margin="0,0,0,12"/>
                                    
                                    <Grid Margin="0,0,0,24">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="16"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- NIF / CPF / CNPJ -->
                                        <TextBox Grid.Row="0" Grid.Column="0"
                                                 Text="{Binding TaxId, UpdateSourceTrigger=PropertyChanged}"
                                                 materialDesign:HintAssist.Hint="NIF / CPF / CNPJ"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 Margin="0,0,0,16"/>

                                        <!-- BI / RG / Passaporte -->
                                        <TextBox Grid.Row="0" Grid.Column="2"
                                                 Text="{Binding IdentificationNumber, UpdateSourceTrigger=PropertyChanged}"
                                                 materialDesign:HintAssist.Hint="BI / RG / Passaporte"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 Margin="0,0,0,16"/>
                                    </Grid>

                                    <!-- Dados de Contato -->
                                    <TextBlock Text="Dados de Contato"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="#1E293B"
                                               Margin="0,0,0,12"/>
                                    
                                    <Grid Margin="0,0,0,24">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="16"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Telefone -->
                                        <TextBox Grid.Row="0" Grid.Column="0"
                                                 Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}"
                                                 materialDesign:HintAssist.Hint="Telefone"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 Margin="0,0,0,16"/>

                                        <!-- Celular -->
                                        <TextBox Grid.Row="0" Grid.Column="2"
                                                 Text="{Binding MobileNumber, UpdateSourceTrigger=PropertyChanged}"
                                                 materialDesign:HintAssist.Hint="Celular"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 Margin="0,0,0,16"/>

                                        <!-- Website -->
                                        <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                                                 Text="{Binding Website, UpdateSourceTrigger=PropertyChanged}"
                                                 materialDesign:HintAssist.Hint="Website"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 Margin="0,0,0,16"/>
                                    </Grid>

                                    <!-- Endereço -->
                                    <TextBlock Text="Endereço"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="#1E293B"
                                               Margin="0,0,0,12"/>
                                    
                                    <Grid Margin="0,0,0,24">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="16"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Endereço completo -->
                                        <TextBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                                                 Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"
                                                 materialDesign:HintAssist.Hint="Endereço Completo"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 Margin="0,0,0,16"/>

                                        <!-- Cidade -->
                                        <TextBox Grid.Row="1" Grid.Column="0"
                                                 Text="{Binding City, UpdateSourceTrigger=PropertyChanged}"
                                                 materialDesign:HintAssist.Hint="Cidade"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 Margin="0,0,0,16"/>

                                        <!-- Estado -->
                                        <TextBox Grid.Row="1" Grid.Column="2"
                                                 Text="{Binding State, UpdateSourceTrigger=PropertyChanged}"
                                                 materialDesign:HintAssist.Hint="Estado"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 Margin="0,0,0,16"/>

                                        <!-- CEP -->
                                        <TextBox Grid.Row="2" Grid.Column="0"
                                                 Text="{Binding PostalCode, UpdateSourceTrigger=PropertyChanged}"
                                                 materialDesign:HintAssist.Hint="CEP / Código Postal"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 Margin="0,0,0,16"/>

                                        <!-- País -->
                                        <TextBox Grid.Row="2" Grid.Column="2"
                                                 Text="{Binding Country, UpdateSourceTrigger=PropertyChanged}"
                                                 materialDesign:HintAssist.Hint="País"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 Margin="0,0,0,16"/>
                                    </Grid>

                                    <!-- Dados Financeiros (visível apenas para Clientes) -->
                                    <StackPanel Margin="0,0,0,24">
                                        <StackPanel.Style>
                                            <Style TargetType="StackPanel">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsCustomer}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </StackPanel.Style>

                                        <TextBlock Text="Dados Financeiros"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Foreground="#1E293B"
                                                   Margin="0,0,0,12"/>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="16"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Limite de Crédito -->
                                            <TextBox Grid.Column="0"
                                                     Text="{Binding CreditLimit, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}"
                                                     materialDesign:HintAssist.Hint="Limite de Crédito"
                                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                     Margin="0,0,0,16">
                                                <TextBox.InputBindings>
                                                    <KeyBinding Key="Enter" Command="{Binding NextStepCommand}"/>
                                                </TextBox.InputBindings>
                                            </TextBox>

                                            <!-- Saldo Atual -->
                                            <TextBox Grid.Column="2"
                                                     Text="{Binding CurrentBalance, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}"
                                                     materialDesign:HintAssist.Hint="Saldo Atual"
                                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                     Margin="0,0,0,16"
                                                     IsReadOnly="True"
                                                     Background="#F5F5F5"/>
                                        </Grid>
                                    </StackPanel>

                                    <!-- Avaliação (visível apenas para Fornecedores) -->
                                    <StackPanel Margin="0,0,0,24">
                                        <StackPanel.Style>
                                            <Style TargetType="StackPanel">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsSupplier}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </StackPanel.Style>

                                        <TextBlock Text="Avaliação do Fornecedor"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   Foreground="#1E293B"
                                                   Margin="0,0,0,12"/>

                                        <ComboBox materialDesign:HintAssist.Hint="Avaliação (1-5 estrelas)"
                                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                                  SelectedValue="{Binding Rating}"
                                                  SelectedValuePath="Tag"
                                                  Margin="0,0,0,16">
                                            <ComboBoxItem Content="Sem Avaliação" Tag="{x:Null}"/>
                                            <ComboBoxItem Content="⭐ - Péssimo" Tag="1"/>
                                            <ComboBoxItem Content="⭐⭐ - Ruim" Tag="2"/>
                                            <ComboBoxItem Content="⭐⭐⭐ - Regular" Tag="3"/>
                                            <ComboBoxItem Content="⭐⭐⭐⭐ - Bom" Tag="4"/>
                                            <ComboBoxItem Content="⭐⭐⭐⭐⭐ - Excelente" Tag="5"/>
                                        </ComboBox>
                                    </StackPanel>

                                    <!-- Observações -->
                                    <TextBlock Text="Observações"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="#1E293B"
                                               Margin="0,0,0,12"/>
                                    
                                    <TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"
                                             materialDesign:HintAssist.Hint="Observações adicionais"
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                             AcceptsReturn="True"
                                             TextWrapping="Wrap"
                                             MinLines="3"
                                             MaxLines="5"
                                             VerticalScrollBarVisibility="Auto"/>
                                </StackPanel>

                                <!-- Step 2: Criar Usuário -->
                                <StackPanel Visibility="{Binding ShowStep2, Converter={StaticResource BoolToVis}}">
                                    <materialDesign:Card Padding="16" Margin="0,0,0,24" Background="#E3F2FD">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="InformationOutline" 
                                                                    Width="24" Height="24"
                                                                    Foreground="#1976D2"
                                                                    VerticalAlignment="Center"
                                                                    Margin="0,0,12,0"/>
                                            <TextBlock TextWrapping="Wrap" Foreground="#1565C0">
                                                <Run Text="O nome de usuário será gerado automaticamente a partir do nome completo. "/>
                                                <Run Text="A senha padrão é 'VendaFlex@123' e deverá ser alterada no primeiro acesso."/>
                                            </TextBlock>
                                        </StackPanel>
                                    </materialDesign:Card>

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Username (gerado automaticamente) -->
                                        <TextBox Grid.Row="0"
                                                 Text="{Binding GeneratedUsername, Mode=OneWay}"
                                                 materialDesign:HintAssist.Hint="Nome de Usuário (gerado automaticamente)"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 IsReadOnly="True"
                                                 Margin="0,0,0,16"
                                                 Background="#F5F5F5"/>

                                        <!-- Status do usuário -->
                                        <ComboBox Grid.Row="1"
                                                  materialDesign:HintAssist.Hint="Status Inicial do Usuário"
                                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                                  SelectedValue="{Binding UserStatus}"
                                                  SelectedValuePath="Tag"
                                                  Margin="0,0,0,16">
                                            <ComboBoxItem Content="Ativo" Tag="{x:Static entities:LoginStatus.Active}" IsSelected="True"/>
                                            <ComboBoxItem Content="Inativo" Tag="{x:Static entities:LoginStatus.Inactive}"/>
                                        </ComboBox>

                                        <!-- Info sobre senha padrão -->
                                        <materialDesign:Card Grid.Row="2" Padding="16" Background="#FFF3E0">
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                    <materialDesign:PackIcon Kind="Key" 
                                                                            Width="20" Height="20"
                                                                            Foreground="#E65100"
                                                                            VerticalAlignment="Center"
                                                                            Margin="0,0,8,0"/>
                                                    <TextBlock Text="Senha Padrão" 
                                                               FontWeight="Bold"
                                                               Foreground="#E65100"
                                                               VerticalAlignment="Center"/>
                                                </StackPanel>
                                                <TextBlock Text="VendaFlex@123" 
                                                           FontSize="16"
                                                           FontWeight="Bold"
                                                           Foreground="#BF360C"
                                                           Margin="0,0,0,8"/>
                                                <TextBlock Text="O funcionário deverá alterar esta senha no primeiro acesso ao sistema."
                                                           TextWrapping="Wrap"
                                                           Foreground="#D84315"
                                                           FontSize="12"/>
                                            </StackPanel>
                                        </materialDesign:Card>
                                    </Grid>
                                </StackPanel>

                                <!-- Step 3: Privilégios -->
                                <StackPanel Visibility="{Binding ShowStep3, Converter={StaticResource BoolToVis}}">
                                    <TextBlock Text="Selecione os privilégios do usuário:"
                                               Style="{StaticResource MaterialDesignBody1TextBlock}"
                                               FontWeight="Medium"
                                               Margin="0,0,0,16"/>

                                    <!-- Busca de privilégios -->
                                    <TextBox Text="{Binding PrivilegeSearchText, UpdateSourceTrigger=PropertyChanged}"
                                             materialDesign:HintAssist.Hint="Buscar privilégios..."
                                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                             Margin="0,0,0,16">
                                        <TextBox.InputBindings>
                                            <KeyBinding Key="Enter" Command="{Binding SearchPrivilegesCommand}"/>
                                        </TextBox.InputBindings>
                                    </TextBox>

                                    <!-- Lista de privilégios -->
                                    <ScrollViewer MaxHeight="300" VerticalScrollBarVisibility="Auto">
                                        <ItemsControl ItemsSource="{Binding AvailablePrivileges}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <materialDesign:Card Margin="0,0,0,8" Padding="12">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>

                                                            <CheckBox Grid.Column="0"
                                                                      IsChecked="{Binding IsSelected}"
                                                                      VerticalAlignment="Center"
                                                                      Margin="0,0,12,0"/>

                                                            <StackPanel Grid.Column="1">
                                                                <TextBlock Text="{Binding Name}"
                                                                           FontWeight="Medium"
                                                                           FontSize="14"/>
                                                                <TextBlock Text="{Binding Description}"
                                                                           Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                                           FontSize="12"
                                                                           TextWrapping="Wrap"
                                                                           Margin="0,4,0,0"/>
                                                                <TextBlock Text="{Binding Code}"
                                                                           Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                                           FontSize="11"
                                                                           FontStyle="Italic"
                                                                           Margin="0,4,0,0"/>
                                                            </StackPanel>
                                                        </Grid>
                                                    </materialDesign:Card>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>

                                    <!-- Botões de seleção rápida -->
                                    <StackPanel Orientation="Horizontal" Margin="0,16,0,0">
                                        <Button Content="Selecionar Todos"
                                                Command="{Binding SelectAllPrivilegesCommand}"
                                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                                Margin="0,0,8,0"/>
                                        <Button Content="Desselecionar Todos"
                                                Command="{Binding DeselectAllPrivilegesCommand}"
                                                Style="{StaticResource MaterialDesignOutlinedButton}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ContentControl.ContentTemplate>
                </ContentControl>
            </ScrollViewer>

            <!-- Footer com botões -->
            <Grid Grid.Row="3" Margin="0,24,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Botão Voltar -->
                <Button Grid.Column="0"
                        Content="VOLTAR"
                        Command="{Binding PreviousStepCommand}"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        HorizontalAlignment="Left"
                        Visibility="{Binding ShowPreviousButton, Converter={StaticResource BoolToVis}}"/>

                <!-- Botões direita -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="CANCELAR"
                            Command="{Binding CancelCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Margin="0,0,8,0"/>

                    <Button Content="{Binding NextButtonText}"
                            Command="{Binding NextStepCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#2196F3"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>

