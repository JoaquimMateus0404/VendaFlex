<Page x:Class="VendaFlex.UI.Views.Dashboard.DashboardView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VendaFlex.UI.Views.Dashboard"
      xmlns:converters="clr-namespace:VendaFlex.Infrastructure.Converters"
      xmlns:oxy="http://oxyplot.org/wpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Loaded="Page_Loaded">

    <Page.Resources>
        <!-- Converters -->
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converters:HexToColorConverter x:Key="HexToColorConverter"/>
        <converters:IntToVisibilityConverter x:Key="IntToVisibilityConverter"/>
        <converters:NullOrEmptyToVisibilityConverter x:Key="NullOrEmptyToVisibilityConverter"/>
        
        <!-- Sidebar Collapse/Expand Animation -->
        <Storyboard x:Key="SidebarExpand">
            <DoubleAnimation Storyboard.TargetName="SidebarColumn"
                           Storyboard.TargetProperty="Width"
                           To="280" Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="TextLabels"
                           Storyboard.TargetProperty="Opacity"
                           To="1" Duration="0:0:0.3" BeginTime="0:0:0.1"/>
        </Storyboard>

        <Storyboard x:Key="SidebarCollapse">
            <DoubleAnimation Storyboard.TargetName="SidebarColumn"
                           Storyboard.TargetProperty="Width"
                           To="80" Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetName="TextLabels"
                           Storyboard.TargetProperty="Opacity"
                           To="0" Duration="0:0:0.2"/>
        </Storyboard>

        <!-- Card Entrance Animation -->
        <Storyboard x:Key="CardEntrance">
            <DoubleAnimation Storyboard.TargetName="MainContent"
                           Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.6">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Card Hover Effect Style -->
        <Style x:Key="DashboardCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E8EBF0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.08" Color="#000000"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.BlurRadius)"
                                               To="25" Duration="0:0:0.3"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Opacity)"
                                               To="0.15" Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.BlurRadius)"
                                               To="15" Duration="0:0:0.3"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.Opacity)"
                                               To="0.08" Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Sidebar Button Style -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="56"/>
            <Setter Property="Margin" Value="12,8"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="materialDesign:RippleAssist.Feedback" Value="#3B82F6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F3F4F6"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E5E7EB"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Active Sidebar Button Style -->
        <Style x:Key="SidebarButtonActiveStyle" TargetType="Button" BasedOn="{StaticResource SidebarButtonStyle}">
            <Setter Property="Background" Value="#DBEAFE"/>
            <Setter Property="Foreground" Value="#3B82F6"/>
        </Style>

        <!-- Metric Card Style -->
        <Style x:Key="MetricCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E8EBF0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.06" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>
        <LinearGradientBrush x:Key="ModernGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0A0E27" Offset="0"/>
            <GradientStop Color="#1A1B3F" Offset="0.5"/>
            <GradientStop Color="#0F1419" Offset="1"/>
        </LinearGradientBrush>
    </Page.Resources>

    <Page.Triggers>
        <EventTrigger RoutedEvent="Page.Loaded">
            <BeginStoryboard Storyboard="{StaticResource CardEntrance}"/>
        </EventTrigger>
    </Page.Triggers>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="SidebarColumn" Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Border Grid.Column="0" Background="{StaticResource ModernGradient}" BorderBrush="#E8EBF0" BorderThickness="0,0,1,0">
            <StackPanel Orientation="Vertical">
                <!-- Header Logo -->
                <Border Padding="20,24,20,20" BorderBrush="#E8EBF0" BorderThickness="0,0,0,1">
                    <StackPanel Orientation="Horizontal">
                        <Viewbox Width="40" Height="40" Margin="0,0,12,0">
                            <Grid>
                                <Ellipse Width="40" Height="40" Fill="#3B82F6" Opacity="0.1"/>
                                <materialDesign:PackIcon Kind="Domain"
                                                       Width="24" Height="24"
                                                       Foreground="#3B82F6"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"/>
                            </Grid>
                        </Viewbox>
                        <StackPanel VerticalAlignment="Center" x:Name="TextLabels" Opacity="1">
                            <TextBlock Text="VendaFlex" FontSize="14" FontWeight="Bold" Foreground="#FFFFFF"/>
                            <TextBlock Text="Dashboard" FontSize="11" Foreground="#9CA3AF"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Navigation Menu -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,20,0,0">
                    <StackPanel Orientation="Vertical">
                        <!-- Dashboard -->
                        <Button Style="{StaticResource SidebarButtonActiveStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ViewDashboard" Width="24" Height="24" Margin="0,0,12,0"/>
                                <TextBlock Text="Dashboard" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Vendas/Faturas -->
                        <Button Style="{StaticResource SidebarButtonStyle}" Click="SalesButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Receipt" Width="24" Height="24" Margin="0,0,12,0"/>
                                <TextBlock Text="Faturas" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Produtos -->
                        <Button Style="{StaticResource SidebarButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Package" Width="24" Height="24" Margin="0,0,12,0"/>
                                <TextBlock Text="Produtos" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Pessoas (Clientes/Fornecedores) -->
                        <Button Style="{StaticResource SidebarButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AccountMultiple" Width="24" Height="24" Margin="0,0,12,0"/>
                                <TextBlock Text="Pessoas" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Estoque -->
                        <Button Style="{StaticResource SidebarButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Warehouse" Width="24" Height="24" Margin="0,0,12,0"/>
                                <TextBlock Text="Estoque" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Relatórios -->
                        <Button Style="{StaticResource SidebarButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FileChart" Width="24" Height="24" Margin="0,0,12,0"/>
                                <TextBlock Text="Relatórios" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Configurações -->
                        <Button Style="{StaticResource SidebarButtonStyle}" Margin="12,40,12,8">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Cog" Width="24" Height="24" Margin="0,0,12,0"/>
                                <TextBlock Text="Configurações" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Sair -->
                        <Button Style="{StaticResource SidebarButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Logout" Width="24" Height="24" Margin="0,0,12,0"/>
                                <TextBlock Text="Sair" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

                <!-- Footer -->
                <StackPanel VerticalAlignment="Bottom" Margin="0,20,0,0">
                    <Border BorderBrush="#E8EBF0" BorderThickness="0,1,0,0" Padding="0,16,0,0">
                        <StackPanel>
                            <TextBlock Text="v1.0.0" FontSize="11" Foreground="#9CA3AF" TextAlignment="Center"/>
                            <TextBlock Text="© 2025 VendaFlex" FontSize="10" Foreground="#D1D5DB" TextAlignment="Center" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Column="1" 
              Background="#F8F9FA" 
              x:Name="MainContent" Opacity="100">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel Orientation="Vertical" Margin="32,28,32,32">

                    <!-- Header Row -->
                    <Grid Margin="0,0,0,32">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Orientation="Vertical" Grid.Column="0">
                            <TextBlock Text="Dashboard" FontSize="32" FontWeight="Bold" Foreground="#111827"/>
                            <TextBlock Text="Bem-vindo de volta! Aqui está o resumo do seu negócio." 
                                     FontSize="14" Foreground="#6B7280" Margin="0,6,0,0"/>

                        </StackPanel>

                        <!-- Notification and Profile Buttons -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="1">
                            <!-- Notification Button -->
                            <Button x:Name="NotificationButton" Width="40" Height="40" BorderBrush="Red"
                                   
                                   Style="{DynamicResource MaterialDesignIconButton}"
                                   materialDesign:ButtonAssist.CornerRadius="50"
                                   
                                   Click="NotificationButton_Click">
                                <Grid>
                                    <materialDesign:PackIcon Kind="Bell" Width="20" Height="20" Foreground="#6B7280"/>
                                    <!-- Badge de notificação -->
                                    <Border Width="18" Height="18" Background="#EF4444" CornerRadius="9"
                                           HorizontalAlignment="Right" VerticalAlignment="Top"
                                           Margin="0,-4,-4,0"
                                           Visibility="{Binding UnreadNotificationsCount, Converter={StaticResource IntToVisibilityConverter}}">
                                        <TextBlock Text="{Binding UnreadNotificationsCount}" FontSize="10" FontWeight="Bold" 
                                                 Foreground="White" HorizontalAlignment="Center" 
                                                 VerticalAlignment="Center"/>
                                    </Border>
                                </Grid>
                            </Button>

                            <!-- Profile Button -->
                            <Button x:Name="ProfileButton" Width="40" Height="40" 
                                   Style="{DynamicResource MaterialDesignIconButton}" 
                                   Margin="12,0,0,0"
                                   materialDesign:ButtonAssist.CornerRadius="8"
                                   Click="ProfileButton_Click">
                                <materialDesign:PackIcon Kind="AccountCircle" Width="20" Height="20" Foreground="#6B7280"/>
                            </Button>

                            <!-- Notification Popup -->
                            <Popup x:Name="NotificationPopup" 
                                   PlacementTarget="{Binding ElementName=NotificationButton}"
                                   Placement="Bottom"
                                   StaysOpen="False"
                                   AllowsTransparency="True"
                                   PopupAnimation="Fade">
                                <Border Background="White" CornerRadius="12" Padding="0" 
                                       BorderBrush="#E8EBF0" BorderThickness="1" Width="320"
                                       Effect="{DynamicResource MaterialDesignShadowDepth3}">
                                    <StackPanel>
                                        <!-- Header -->
                                        <Border BorderBrush="#E8EBF0" BorderThickness="0,0,0,1" Padding="16,12">
                                            <Grid>
                                                <TextBlock Text="Notificações" FontSize="14" FontWeight="Bold" 
                                                         Foreground="#111827" VerticalAlignment="Center"/>
                                                <Button Content="Marcar todas lidas" 
                                                       Style="{DynamicResource MaterialDesignFlatButton}"
                                                       FontSize="11" Foreground="#3B82F6"
                                                       HorizontalAlignment="Right" Height="24" Padding="8,0"
                                                       Command="{x:Static ApplicationCommands.NotACommand}"
                                                       CommandParameter="markAll"/>
                                            </Grid>
                                        </Border>

                                        <!-- Notifications List (dinâmica) -->
                                        <ScrollViewer MaxHeight="400" VerticalScrollBarVisibility="Auto">
                                            <ItemsControl ItemsSource="{Binding Notifications}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border BorderBrush="#E8EBF0" BorderThickness="0,0,0,1" 
                                                               Background="Transparent" Padding="16,12"
                                                               MouseEnter="NotificationItem_MouseEnter"
                                                               MouseLeave="NotificationItem_MouseLeave">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>

                                                                <Border Width="40" Height="40" CornerRadius="8" Margin="0,0,12,0">
                                                                    <Border.Background>
                                                                        <SolidColorBrush Color="{Binding IconBackgroundColor, Converter={StaticResource HexToColorConverter}}"/>
                                                                    </Border.Background>
                                                                    <materialDesign:PackIcon Kind="{Binding IconKind}" 
                                                                                           Width="20" Height="20" 
                                                                                           HorizontalAlignment="Center" 
                                                                                           VerticalAlignment="Center">
                                                                        <materialDesign:PackIcon.Foreground>
                                                                            <SolidColorBrush Color="{Binding IconColor, Converter={StaticResource HexToColorConverter}}"/>
                                                                        </materialDesign:PackIcon.Foreground>
                                                                    </materialDesign:PackIcon>
                                                                </Border>

                                                                <StackPanel Grid.Column="1">
                                                                    <TextBlock Text="{Binding Title}" FontSize="12" 
                                                                             FontWeight="SemiBold" Foreground="#111827"/>
                                                                    <TextBlock Text="{Binding Message}" FontSize="11" Foreground="#6B7280" 
                                                                             TextWrapping="Wrap" Margin="0,2,0,4"/>
                                                                    <TextBlock Text="{Binding RelativeTime}" FontSize="10" 
                                                                             Foreground="#9CA3AF"/>
                                                                </StackPanel>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </ScrollViewer>

                                        <!-- Footer -->
                                        <Border BorderBrush="#E8EBF0" BorderThickness="0,1,0,0" Padding="16,12">
                                            <Button Content="Ver todas as notificações" 
                                                   Style="{DynamicResource MaterialDesignFlatButton}"
                                                   FontSize="12" Foreground="#3B82F6"
                                                   HorizontalAlignment="Center" Height="28"/>
                                        </Border>
                                    </StackPanel>
                                </Border>
                            </Popup>

                            <!-- Profile Popup -->
                            <Popup x:Name="ProfilePopup" 
                                   PlacementTarget="{Binding ElementName=ProfileButton}"
                                   Placement="Bottom"
                                   StaysOpen="False"
                                   AllowsTransparency="True"
                                   PopupAnimation="Fade">
                                <Border Background="White" CornerRadius="12" Padding="0" 
                                       BorderBrush="#E8EBF0" BorderThickness="1" Width="280"
                                       Effect="{DynamicResource MaterialDesignShadowDepth3}">
                                    <StackPanel>
                                        <!-- User Info -->
                                        <Border BorderBrush="#E8EBF0" BorderThickness="0,0,0,1" Padding="16">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Avatar -->
                                                <Grid Width="48" Height="48" Margin="0,0,12,0">
                                                  <Image Source="{Binding CurrentUserProfileImageUrl}"
                                                         Stretch="UniformToFill" Width="48" Height="48" ClipToBounds="True"
                                                         Visibility="{Binding CurrentUserProfileImageUrl, Converter={StaticResource NullOrEmptyToVisibilityConverter}}"/>
                                                  <Border Background="#3B82F6" CornerRadius="24"
                                                          Visibility="{Binding CurrentUserProfileImageUrl, Converter={StaticResource NullOrEmptyToVisibilityConverter}, ConverterParameter=Invert}">
                                                    <TextBlock Text="{Binding CurrentUserInitials}" FontSize="18" FontWeight="Bold" 
                                                               Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                  </Border>
                                                </Grid>

                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding CurrentUserName}" FontSize="14" FontWeight="SemiBold" 
                                                               Foreground="#111827"/>
                                                    <TextBlock Text="{Binding CurrentUserEmail}" FontSize="11" 
                                                               Foreground="#6B7280" Margin="0,2,0,0"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>

                                        <!-- Menu Items -->
                                        <StackPanel>
                                            <Button Style="{DynamicResource MaterialDesignFlatButton}"
                                                    Height="40" HorizontalContentAlignment="Left" Padding="12">
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="AccountCircle" 
                                                                       Width="20" Height="20" 
                                                                       Foreground="#6B7280" 
                                                                       Margin="0,0,12,0"/>
                                                    <TextBlock Text="Meu Perfil" FontSize="13" 
                 Foreground="#111827" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Button>

                                            <Button Style="{DynamicResource MaterialDesignFlatButton}"
       Height="40" HorizontalContentAlignment="Left"
       Padding="12,0">
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="Cog" 
                               Width="20" Height="20" 
                               Foreground="#6B7280" 
                               Margin="0,0,12,0"/>
                                                    <TextBlock Text="Configurações" FontSize="13" 
                 Foreground="#111827" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Button>

                                            <Button Style="{DynamicResource MaterialDesignFlatButton}"
       Height="40" HorizontalContentAlignment="Left"
       Padding="12,0">
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="HelpCircle" 
                               Width="20" Height="20" 
                               Foreground="#6B7280" 
                               Margin="0,0,12,0"/>
                                                    <TextBlock Text="Ajuda" FontSize="13" 
                 Foreground="#111827" VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Button>

                                            <Separator Margin="0,8" Background="#E8EBF0"/>
                                            
                                            <Button Style="{DynamicResource MaterialDesignFlatButton}"
                                                  Height="40" HorizontalContentAlignment="Left" Padding="12,0"
                                                  Click="LogoutButton_Click">
                                            <StackPanel Orientation="Horizontal">
                                              <materialDesign:PackIcon Kind="Logout" Width="20" Height="20" Foreground="#EF4444" Margin="0,0,12,0"/>
                                              <TextBlock Text="Sair" FontSize="13" Foreground="#EF4444" VerticalAlignment="Center" FontWeight="SemiBold"/>
                                            </StackPanel>
                                          </Button>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </Popup>
                        </StackPanel>
                    </Grid>

                    <!-- Key Metrics Row - DINÂMICO -->
                    <ItemsControl ItemsSource="{Binding Metrics}" Margin="0,0,0,28">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="1" Columns="4"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource MetricCardStyle}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                                            <Border Width="48" Height="48" CornerRadius="8">
                                                <Border.Background>
                                                    <SolidColorBrush Color="{Binding IconBackgroundColor, Converter={StaticResource HexToColorConverter}}"/>
                                                </Border.Background>
                                                <materialDesign:PackIcon Kind="{Binding IconKind}" Width="24" Height="24"
                                                                       HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <materialDesign:PackIcon.Foreground>
                                                        <SolidColorBrush Color="{Binding IconColor, Converter={StaticResource HexToColorConverter}}"/>
                                                    </materialDesign:PackIcon.Foreground>
                                                </materialDesign:PackIcon>
                                            </Border>
                                            <TextBlock Text="{Binding Title}" Foreground="#6B7280" FontSize="12"
                                                     VerticalAlignment="Center" Margin="12,0,0,0" FontWeight="Medium"/>
                                        </StackPanel>

                                        <TextBlock Grid.Row="1" Text="{Binding Value}" FontSize="24" FontWeight="Bold"
                                                 Foreground="#111827" Margin="0,0,0,4"/>

                                        <StackPanel Grid.Row="2" Orientation="Horizontal">
                                            <TextBlock Text="{Binding ChangeText}" FontSize="12" FontWeight="SemiBold">
                                                <TextBlock.Foreground>
                                                    <SolidColorBrush Color="{Binding ChangeColor, Converter={StaticResource HexToColorConverter}}"/>
                                                </TextBlock.Foreground>
                                            </TextBlock>
                                            <TextBlock Text="{Binding DescriptionText}" Foreground="#9CA3AF" 
                                                     FontSize="12" Margin="6,0,0,0"
                                                     Visibility="{Binding DescriptionText, Converter={StaticResource StringToVisibilityConverter}}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Charts Row -->
                    <Grid Margin="0,0,0,28">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Sales Chart -->
                        <Border Grid.Column="0" Style="{StaticResource DashboardCard}">
                            <StackPanel>
                                <TextBlock Text="Receita por Período" FontSize="16" FontWeight="Bold"
                                         Foreground="#111827" Margin="0,0,0,20"/>

                                <oxy:PlotView Height="280" Model="{Binding SalesPlotModel}" />

                                <!-- Caption / descrição do gráfico -->
                                <TextBlock Text="{Binding SalesChartCaption}"
                                           FontSize="11"
                                           Foreground="#6B7280"
                                           Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Top Products - DINÂMICO -->
                        <Border Grid.Column="1" Style="{StaticResource DashboardCard}" Margin="20,0,0,0">
                            <StackPanel>
                                <TextBlock Text="Produtos Top" FontSize="16" FontWeight="Bold"
                                         Foreground="#111827" Margin="0,0,0,16"/>

                                <ItemsControl ItemsSource="{Binding TopProducts}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Padding="0,12" BorderBrush="#E8EBF0" BorderThickness="0,0,0,1">
                                                <StackPanel>
                                                    <Grid Margin="0,0,0,8">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <StackPanel Grid.Column="0">
                                                            <TextBlock Text="{Binding ProductName}" FontSize="13" FontWeight="SemiBold"
                                                                     Foreground="#111827"/>
                                                            <TextBlock Text="{Binding RevenueFormatted}" FontSize="11" Foreground="#9CA3AF"
                                                                     Margin="0,2,0,0"/>
                                                        </StackPanel>

                                                        <TextBlock Grid.Column="1" FontSize="12" FontWeight="Bold"
                                                                 Foreground="#3B82F6" VerticalAlignment="Center">
                                                            <Run Text="{Binding QuantitySold}"/>
                                                            <Run Text=" un."/>
                                                        </TextBlock>
                                                    </Grid>

                                                    <!-- Progress Bar -->
                                                    <ProgressBar Value="{Binding ProgressPercentage}" 
                                                               Maximum="100" Height="4"
                                                               Foreground="#3B82F6" Background="#E8EBF0"
                                                               BorderThickness="0"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Recent Invoices - DINÂMICO -->
                    <Border Style="{StaticResource DashboardCard}">
                        <StackPanel>
                            <Grid Margin="0,0,0,20">
                                <TextBlock Text="Faturas Recentes" FontSize="16" FontWeight="Bold"
                                         Foreground="#111827" VerticalAlignment="Center"/>
                                <Button Content="Ver todas" Style="{DynamicResource MaterialDesignFlatButton}"
                                       FontSize="12" Foreground="#3B82F6" HorizontalAlignment="Right"/>
                            </Grid>

                            <!-- Table Header -->
                            <Grid Margin="0,0,0,12" Background="#F9FAFB" Height="40">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="Nº Fatura" FontSize="11" FontWeight="Bold"
                                         Foreground="#6B7280" VerticalAlignment="Center" Margin="12,0"/>
                                <TextBlock Grid.Column="1" Text="Cliente" FontSize="11" FontWeight="Bold"
                                         Foreground="#6B7280" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="2" Text="Data" FontSize="11" FontWeight="Bold"
                                         Foreground="#6B7280" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="3" Text="Valor" FontSize="11" FontWeight="Bold"
                                         Foreground="#6B7280" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="4" Text="Status" FontSize="11" FontWeight="Bold"
                                         Foreground="#6B7280" VerticalAlignment="Center"/>
                            </Grid>

                            <!-- Invoices List - Data Binding -->
                            <ItemsControl ItemsSource="{Binding RecentInvoices}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#E8EBF0" BorderThickness="0,0,0,1" Padding="12,16"
                                               Background="Transparent"
                                               MouseEnter="InvoiceRow_MouseEnter"
                                               MouseLeave="InvoiceRow_MouseLeave">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="140"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="140"/>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="100"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Text="{Binding InvoiceNumber}" FontSize="12" 
                                                         FontWeight="SemiBold" Foreground="#3B82F6" 
                                                         VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="1" Text="{Binding CustomerName}" FontSize="12" 
                                                         Foreground="#111827" VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="2" Text="{Binding IssueDateFormatted}" FontSize="12" 
                                                         Foreground="#6B7280" VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="3" Text="{Binding TotalAmountFormatted}" FontSize="12" 
                                                         FontWeight="SemiBold" Foreground="#111827" 
                                                         VerticalAlignment="Center"/>
                                                <Border Grid.Column="4" CornerRadius="6" 
                                                       Padding="8,4" HorizontalAlignment="Center">
                                                    <Border.Background>
                                                        <SolidColorBrush Color="{Binding StatusBackgroundColor, Converter={StaticResource HexToColorConverter}}"/>
                                                    </Border.Background>
                                                    <TextBlock Text="{Binding Status}" FontSize="11" FontWeight="SemiBold">
                                                        <TextBlock.Foreground>
                                                            <SolidColorBrush Color="{Binding StatusColor, Converter={StaticResource HexToColorConverter}}"/>
                                                        </TextBlock.Foreground>
                                                    </TextBlock>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>