<Page x:Class="VendaFlex.UI.Views.Settings.UserProfileView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:converters="clr-namespace:VendaFlex.Infrastructure.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="919"
      Title="Perfil do Usuário"
      Background="{DynamicResource MaterialDesignPaper}" Width="1123">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>

        <!-- Animações -->
        <Storyboard x:Key="FadeIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3"/>
        </Storyboard>
    </Page.Resources>

    <Page.Triggers>
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard Storyboard="{StaticResource FadeIn}"/>
        </EventTrigger>
    </Page.Triggers>

    <Grid>
        <!-- Loading Overlay com efeito blur -->
        <Border Background="#DD000000" 
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}"
                Panel.ZIndex="999">
            <Border.Effect>
                <BlurEffect Radius="10"/>
            </Border.Effect>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                             Value="0"
                             IsIndeterminate="True"
                             Width="70" Height="70"
                             Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                <TextBlock Text="Carregando perfil..."
                           Foreground="White"
                           FontSize="18"
                           FontWeight="Medium"
                           Margin="0,24,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid>
                <!-- Background Header com Gradiente -->
                <Border Height="280" VerticalAlignment="Top" Panel.ZIndex="0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#667eea" Offset="0"/>
                            <GradientStop Color="#764ba2" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>

                <StackPanel MaxWidth="1200" HorizontalAlignment="Center" Margin="0,40,0,0">

                    <!-- Header com botões flutuantes -->
                    <Grid Margin="0,0,0,30">
                        <StackPanel>
                            <TextBlock Text="Perfil do Usuário"
                                       FontSize="36"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Margin="0,0,0,8">
                                <TextBlock.Effect>
                                    <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.3"/>
                                </TextBlock.Effect>
                            </TextBlock>
                            <TextBlock Text="Gerencie suas informações pessoais e configurações de conta"
                                       FontSize="16"
                                       Foreground="#E0FFFFFF"
                                       FontWeight="Light"/>
                        </StackPanel>

                        <!-- Botões de ação com estilo elevado -->
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top">
                            <Button Command="{Binding EditCommand}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Height="40"
                                    Padding="20,0"
                                    materialDesign:ButtonAssist.CornerRadius="20"
                                    materialDesign:ElevationAssist.Elevation="Dp4"
                                    Margin="0,0,12,0"
                                    Visibility="{Binding IsEditMode, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Pencil" 
                                                             Width="20" Height="20"
                                                             VerticalAlignment="Center"
                                                             Margin="0,0,8,0"/>
                                    <TextBlock Text="EDITAR" 
                                               VerticalAlignment="Center"
                                               FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>

                            <Button Command="{Binding SaveCommand}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Background="#4CAF50"
                                    BorderBrush="#4CAF50"
                                    Height="40"
                                    Padding="20,0"
                                    materialDesign:ButtonAssist.CornerRadius="20"
                                    materialDesign:ElevationAssist.Elevation="Dp4"
                                    Margin="0,0,12,0"
                                    Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVis}}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ContentSave" 
                                                             Width="20" Height="20"
                                                             VerticalAlignment="Center"
                                                             Margin="0,0,8,0"/>
                                    <TextBlock Text="SALVAR" 
                                               VerticalAlignment="Center"
                                               FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>

                            <Button Command="{Binding CancelCommand}"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Background="White"
                                    Foreground="#764ba2"
                                    Height="40"
                                    Padding="20,0"
                                    materialDesign:ButtonAssist.CornerRadius="20"
                                    materialDesign:ElevationAssist.Elevation="Dp2"
                                    Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVis}}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Close" 
                                                             Width="20" Height="20"
                                                             VerticalAlignment="Center"
                                                             Margin="0,0,8,0"/>
                                    <TextBlock Text="CANCELAR" 
                                               VerticalAlignment="Center"
                                               FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!-- Mensagens com animação -->
                    <materialDesign:Card Background="#4CAF50"
                                         Padding="20"
                                         Margin="20,0,20,16"
                                         materialDesign:ElevationAssist.Elevation="Dp6"
                                         Visibility="{Binding SuccessMessage, Converter={StaticResource NullToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CheckCircle" 
                                                     Width="28" Height="28"
                                                     Foreground="White"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,12,0"/>
                            <TextBlock Text="{Binding SuccessMessage}"
                                       Foreground="White"
                                       FontSize="15"
                                       FontWeight="Medium"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </materialDesign:Card>

                    <materialDesign:Card Background="#F44336"
                                         Padding="20"
                                         Margin="20,0,20,16"
                                         materialDesign:ElevationAssist.Elevation="Dp6"
                                         Visibility="{Binding ErrorMessage, Converter={StaticResource NullToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AlertCircle" 
                                                     Width="28" Height="28"
                                                     Foreground="White"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,12,0"/>
                            <TextBlock Text="{Binding ErrorMessage}"
                                       Foreground="White"
                                       FontSize="15"
                                       FontWeight="Medium"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </materialDesign:Card>

                    <Grid Margin="20,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="340"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Coluna Esquerda - Foto e Info Básica -->
                        <StackPanel Grid.Column="0" Margin="0,0,24,0">

                            <!-- Card de Perfil com Design Moderno -->
                            <materialDesign:Card Margin="0,0,0,20" 
                                                 Padding="30"
                                                 materialDesign:ElevationAssist.Elevation="Dp8">
                                <StackPanel>
                                    <!-- Foto de Perfil com efeito -->
                                    <Grid>
                                        <Ellipse Width="200" Height="200" 
                                                 HorizontalAlignment="Center">
                                            <Ellipse.Fill>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="#667eea" Offset="0"/>
                                                    <GradientStop Color="#764ba2" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Ellipse.Fill>
                                            <Ellipse.Effect>
                                                <DropShadowEffect ShadowDepth="0" BlurRadius="20" Color="#667eea" Opacity="0.5"/>
                                            </Ellipse.Effect>
                                        </Ellipse>

                                        <Border Width="190" Height="190"
                                                CornerRadius="95"
                                                BorderBrush="White"
                                                BorderThickness="5"
                                                HorizontalAlignment="Center">
                                            <Border.Background>
                                                <ImageBrush ImageSource="{Binding ProfileImageUrl}"
                                                            Stretch="UniformToFill"/>
                                            </Border.Background>

                                            <!-- Ícone padrão -->
                                            <materialDesign:PackIcon Kind="Account"
                                                                     Width="130" Height="130"
                                                                     Foreground="#CCCCCC"
                                                                     HorizontalAlignment="Center"
                                                                     VerticalAlignment="Center">
                                                <materialDesign:PackIcon.Style>
                                                    <Style TargetType="materialDesign:PackIcon">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding ProfileImageUrl}" Value="">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding ProfileImageUrl}" Value="{x:Null}">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </materialDesign:PackIcon.Style>
                                            </materialDesign:PackIcon>
                                        </Border>

                                        <!-- Botão de Camera flutuante -->
                                        <Button Command="{Binding UploadPhotoCommand}"
                                                Style="{StaticResource MaterialDesignFloatingActionMiniButton}"
                                                Background="{DynamicResource PrimaryHueMidBrush}"
                                                Width="50" Height="50"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Bottom"
                                                Margin="0,0,25,15"
                                                materialDesign:ElevationAssist.Elevation="Dp6"
                                                Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVis}}">
                                            <materialDesign:PackIcon Kind="Camera" Width="24" Height="24"/>
                                        </Button>
                                    </Grid>

                                    <TextBlock Text="{Binding Name}"
                                               FontSize="24"
                                               FontWeight="Bold"
                                               TextAlignment="Center"
                                               Margin="0,24,0,6"/>

                                    <TextBlock Text="{Binding Username, StringFormat='@{0}'}"
                                               FontSize="15"
                                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                                               TextAlignment="Center"
                                               Margin="0,0,0,16"/>

                                    <!-- Badge de Status com design moderno -->
                                    <Border Background="{DynamicResource PrimaryHueMidBrush}"
                                            CornerRadius="15"
                                            Padding="16,8"
                                            HorizontalAlignment="Center">
                                        <Border.Effect>
                                            <DropShadowEffect ShadowDepth="2" BlurRadius="10" Opacity="0.3"/>
                                        </Border.Effect>
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="CheckCircle" 
                                                                     Width="16" Height="16"
                                                                     Foreground="White"
                                                                     VerticalAlignment="Center"
                                                                     Margin="0,0,6,0"/>
                                            <TextBlock Text="{Binding StatusDisplay}"
                                                       FontSize="13"
                                                       FontWeight="SemiBold"
                                                       Foreground="White"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Divider decorativo -->
                                    <Separator Margin="0,24,0,24" Background="{DynamicResource MaterialDesignDivider}"/>

                                    <!-- Estatísticas rápidas -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                            <materialDesign:PackIcon Kind="ShieldAccount" 
                                                                     Width="28" Height="28"
                                                                     Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                                     HorizontalAlignment="Center"/>
                                            <TextBlock Text="Seguro"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,6,0,0"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                            <materialDesign:PackIcon Kind="CheckDecagram" 
                                                                     Width="28" Height="28"
                                                                     Foreground="#4CAF50"
                                                                     HorizontalAlignment="Center"/>
                                            <TextBlock Text="Verificado"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,6,0,0"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                            <materialDesign:PackIcon Kind="Crown" 
                                                                     Width="28" Height="28"
                                                                     Foreground="#FF9800"
                                                                     HorizontalAlignment="Center"/>
                                            <TextBlock Text="Premium"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"
                                                       HorizontalAlignment="Center"
                                                       Margin="0,6,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </materialDesign:Card>

                            <!-- Card de Segurança com design aprimorado -->
                            <materialDesign:Card Padding="24" 
                                                 materialDesign:ElevationAssist.Elevation="Dp4">
                                <StackPanel>
                                    <Grid Margin="0,0,0,20">
                                        <StackPanel Orientation="Horizontal">
                                            <Border Background="#E8EAF6" 
                                                    CornerRadius="8"
                                                    Width="40" Height="40"
                                                    Margin="0,0,12,0">
                                                <materialDesign:PackIcon Kind="Security"
                                                                         Width="24" Height="24"
                                                                         Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                                         HorizontalAlignment="Center"
                                                                         VerticalAlignment="Center"/>
                                            </Border>
                                            <StackPanel>
                                                <TextBlock Text="Segurança"
                                                           FontSize="18"
                                                           FontWeight="Bold"/>
                                                <TextBlock Text="Informações de acesso"
                                                           FontSize="12"
                                                           Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>

                                    <Border Background="#F5F5F5" 
                                            CornerRadius="8" 
                                            Padding="16"
                                            Margin="0,0,0,12">
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                <materialDesign:PackIcon Kind="Login"
                                                                         Width="18" Height="18"
                                                                         Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                                         VerticalAlignment="Center"
                                                                         Margin="0,0,10,0"/>
                                                <TextBlock Text="Último Login"
                                                           FontSize="12"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                            </StackPanel>
                                            <TextBlock Text="{Binding LastLoginAt, StringFormat='dd/MM/yyyy HH:mm'}"
                                                       FontSize="14"
                                                       FontWeight="Medium"
                                                       Margin="28,0,0,0"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Background="#F5F5F5" 
                                            CornerRadius="8" 
                                            Padding="16"
                                            Margin="0,0,0,20">
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                <materialDesign:PackIcon Kind="Ip"
                                                                         Width="18" Height="18"
                                                                         Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                                         VerticalAlignment="Center"
                                                                         Margin="0,0,10,0"/>
                                                <TextBlock Text="Endereço IP"
                                                           FontSize="12"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                            </StackPanel>
                                            <TextBlock Text="{Binding LastLoginIp}"
                                                       FontSize="14"
                                                       FontWeight="Medium"
                                                       Margin="28,0,0,0"/>
                                        </StackPanel>
                                    </Border>

                                    <Button Command="{Binding TogglePasswordSectionCommand}"
                                            Style="{StaticResource MaterialDesignRaisedButton}"
                                            Background="#FF9800"
                                            BorderBrush="#FF9800"
                                            Height="42"
                                            materialDesign:ButtonAssist.CornerRadius="8"
                                            HorizontalAlignment="Stretch">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <materialDesign:PackIcon Kind="Lock" 
                                                                     Width="20" Height="20"
                                                                     VerticalAlignment="Center"
                                                                     Margin="0,0,10,0"/>
                                            <TextBlock Text="Alterar Senha" 
                                                       VerticalAlignment="Center"
                                                       FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </materialDesign:Card>
                        </StackPanel>

                        <!-- Coluna Direita - Informações Detalhadas -->
                        <StackPanel Grid.Column="1">

                            <!-- Informações Pessoais -->
                            <materialDesign:Card Margin="0,0,0,20" 
                                                 Padding="30"
                                                 materialDesign:ElevationAssist.Elevation="Dp4">
                                <StackPanel>
                                    <Grid Margin="0,0,0,24">
                                        <StackPanel Orientation="Horizontal">
                                            <Border Background="#E3F2FD" 
                                                    CornerRadius="10"
                                                    Width="48" Height="48"
                                                    Margin="0,0,16,0">
                                                <materialDesign:PackIcon Kind="Account"
                                                                         Width="28" Height="28"
                                                                         Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                                         HorizontalAlignment="Center"
                                                                         VerticalAlignment="Center"/>
                                            </Border>
                                            <StackPanel>
                                                <TextBlock Text="Informações Pessoais"
                                                           FontSize="20"
                                                           FontWeight="Bold"/>
                                                <TextBlock Text="Dados básicos do seu perfil"
                                                           FontSize="13"
                                                           Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBox Grid.Row="0" Grid.Column="0"
                                                 Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                                 materialDesign:HintAssist.Hint="Nome Completo *"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                                 IsEnabled="{Binding IsEditMode}"
                                                 FontSize="14"
                                                 Margin="0,0,0,20"/>

                                        <TextBox Grid.Row="0" Grid.Column="2"
                                                 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                                                 materialDesign:HintAssist.Hint="Nome de Usuário *"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                                 IsEnabled="{Binding IsEditMode}"
                                                 FontSize="14"
                                                 Margin="0,0,0,20"/>

                                        <TextBox Grid.Row="1" Grid.Column="0"
                                                 Text="{Binding TaxId, UpdateSourceTrigger=PropertyChanged}"
                                                 materialDesign:HintAssist.Hint="NIF / CPF / CNPJ"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                                 IsEnabled="{Binding IsEditMode}"
                                                 FontSize="14"/>

                                        <TextBox Grid.Row="1" Grid.Column="2"
                                                 Text="{Binding IdentificationNumber, UpdateSourceTrigger=PropertyChanged}"
                                                 materialDesign:HintAssist.Hint="BI / RG / Passaporte"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                                 IsEnabled="{Binding IsEditMode}"
                                                 FontSize="14"/>
                                    </Grid>
                                </StackPanel>
                            </materialDesign:Card>

                            <!-- Informações de Contato -->
                            <materialDesign:Card Margin="0,0,0,20" 
                                                 Padding="30"
                                                 materialDesign:ElevationAssist.Elevation="Dp4">
                                <StackPanel>
                                    <Grid Margin="0,0,0,24">
                                        <StackPanel Orientation="Horizontal">
                                            <Border Background="#E8F5E9" 
                                                    CornerRadius="10"
                                                    Width="48" Height="48"
                                                    Margin="0,0,16,0">
                                                <materialDesign:PackIcon Kind="Email"
                                                                         Width="28" Height="28"
                                                                         Foreground="#4CAF50"
                                                                         HorizontalAlignment="Center"
                                                                         VerticalAlignment="Center"/>
                                            </Border>
                                            <StackPanel>
                                                <TextBlock Text="Informações de Contato"
                                                           FontSize="20"
                                                           FontWeight="Bold"/>
                                                <TextBlock Text="Como podemos entrar em contato"
                                                           FontSize="13"
                                                           Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                                                 Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                                                 materialDesign:HintAssist.Hint="Email"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                                 IsEnabled="{Binding IsEditMode}"
                                                 FontSize="14"
                                                 Margin="0,0,0,20"/>

                                        <TextBox Grid.Row="1" Grid.Column="0"
                                                 Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}"
                                                 materialDesign:HintAssist.Hint="Telefone"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                                 IsEnabled="{Binding IsEditMode}"
                                                 FontSize="14"/>

                                        <TextBox Grid.Row="1" Grid.Column="2"
                                                 Text="{Binding MobileNumber, UpdateSourceTrigger=PropertyChanged}"
                                                 materialDesign:HintAssist.Hint="Celular"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                                 IsEnabled="{Binding IsEditMode}"
                                                 FontSize="14"/>
                                    </Grid>
                                </StackPanel>
                            </materialDesign:Card>

                            <!-- Endereço -->
                            <materialDesign:Card Margin="0,0,0,20" 
                                                 Padding="30"
                                                 materialDesign:ElevationAssist.Elevation="Dp4">
                                <StackPanel>
                                    <Grid Margin="0,0,0,24">
                                        <StackPanel Orientation="Horizontal">
                                            <Border Background="#FFF3E0" 
                                                    CornerRadius="10"
                                                    Width="48" Height="48"
                                                    Margin="0,0,16,0">
                                                <materialDesign:PackIcon Kind="MapMarker"
                                                                         Width="28" Height="28"
                                                                         Foreground="#FF9800"
                                                                         HorizontalAlignment="Center"
                                                                         VerticalAlignment="Center"/>
                                            </Border>
                                            <StackPanel>
                                                <TextBlock Text="Endereço"
                                                           FontSize="20"
                                                           FontWeight="Bold"/>
                                                <TextBlock Text="Localização e informações de endereço"
                                                           FontSize="13"
                                                           Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <TextBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                                                 Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"
                                                 materialDesign:HintAssist.Hint="Endereço Completo"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                                 IsEnabled="{Binding IsEditMode}"
                                                 FontSize="14"
                                                 Margin="0,0,0,20"/>

                                        <TextBox Grid.Row="1" Grid.Column="0"
                                                 Text="{Binding City, UpdateSourceTrigger=PropertyChanged}"
                                                 materialDesign:HintAssist.Hint="Cidade"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                                 IsEnabled="{Binding IsEditMode}"
                                                 FontSize="14"
                                                 Margin="0,0,0,20"/>

                                        <TextBox Grid.Row="1" Grid.Column="2"
                                                 Text="{Binding State, UpdateSourceTrigger=PropertyChanged}"
                                                 materialDesign:HintAssist.Hint="Estado / Província"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                                 IsEnabled="{Binding IsEditMode}"
                                                 FontSize="14"
                                                 Margin="0,0,0,20"/>

                                        <TextBox Grid.Row="2" Grid.Column="0"
                                                 Text="{Binding PostalCode, UpdateSourceTrigger=PropertyChanged}"
                                                 materialDesign:HintAssist.Hint="CEP / Código Postal"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                                 IsEnabled="{Binding IsEditMode}"
                                                 FontSize="14"/>

                                        <TextBox Grid.Row="2" Grid.Column="2"
                                                 Text="{Binding Country, UpdateSourceTrigger=PropertyChanged}"
                                                 materialDesign:HintAssist.Hint="País"
                                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                                 IsEnabled="{Binding IsEditMode}"
                                                 FontSize="14"/>
                                    </Grid>
                                </StackPanel>
                            </materialDesign:Card>

                            <!-- Seção de Alteração de Senha -->
                            <materialDesign:Card Padding="30"
                                                 materialDesign:ElevationAssist.Elevation="Dp6"
                                                 Visibility="{Binding ShowPasswordSection, Converter={StaticResource BoolToVis}}">
                                <StackPanel>
                                    <Grid Margin="0,0,0,28">
                                        <StackPanel Orientation="Horizontal">
                                            <Border Background="#FFF3E0" 
                                                    CornerRadius="10"
                                                    Width="48" Height="48"
                                                    Margin="0,0,16,0">
                                                <materialDesign:PackIcon Kind="LockReset"
                                                                         Width="28" Height="28"
                                                                         Foreground="#FF9800"
                                                                         HorizontalAlignment="Center"
                                                                         VerticalAlignment="Center"/>
                                            </Border>
                                            <StackPanel>
                                                <TextBlock Text="Alterar Senha"
                                                           FontSize="20"
                                                           FontWeight="Bold"/>
                                                <TextBlock Text="Mantenha sua conta segura"
                                                           FontSize="13"
                                                           Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Info de segurança -->
                                    <Border Background="#FFF9C4" 
                                            BorderBrush="#FBC02D"
                                            BorderThickness="1"
                                            CornerRadius="8"
                                            Padding="16"
                                            Margin="0,0,0,24">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="InformationOutline"
                                                                     Width="24" Height="24"
                                                                     Foreground="#F57F17"
                                                                     VerticalAlignment="Top"
                                                                     Margin="0,0,12,0"/>
                                            <TextBlock TextWrapping="Wrap"
                                                       FontSize="13"
                                                       Foreground="#F57F17">
                                                <Run Text="A senha deve conter pelo menos 6 caracteres."/>
                                                <LineBreak/>
                                                <Run Text="Recomendamos usar letras maiúsculas, minúsculas, números e caracteres especiais."/>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>

                                    <PasswordBox x:Name="CurrentPasswordBox"
                                                 materialDesign:HintAssist.Hint="Senha Atual *"
                                                 Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                                 PasswordChanged="CurrentPasswordBox_PasswordChanged"
                                                 FontSize="14"
                                                 Margin="0,0,0,20"/>

                                    <PasswordBox x:Name="NewPasswordBox"
                                                 materialDesign:HintAssist.Hint="Nova Senha * (mínimo 6 caracteres)"
                                                 Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                                 PasswordChanged="NewPasswordBox_PasswordChanged"
                                                 FontSize="14"
                                                 Margin="0,0,0,20"/>

                                    <PasswordBox x:Name="ConfirmPasswordBox"
                                                 materialDesign:HintAssist.Hint="Confirmar Nova Senha *"
                                                 Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                                 materialDesign:TextFieldAssist.HasClearButton="True"
                                                 PasswordChanged="ConfirmPasswordBox_PasswordChanged"
                                                 FontSize="14"
                                                 Margin="0,0,0,28"/>

                                    <Button Command="{Binding ChangePasswordCommand}"
                                            Style="{StaticResource MaterialDesignRaisedButton}"
                                            Background="#FF9800"
                                            BorderBrush="#FF9800"
                                            Height="48"
                                            materialDesign:ButtonAssist.CornerRadius="8"
                                            materialDesign:ElevationAssist.Elevation="Dp4"
                                            HorizontalAlignment="Left"
                                            Padding="32,0">
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="LockReset" 
                                                                     Width="22" Height="22"
                                                                     VerticalAlignment="Center"
                                                                     Margin="0,0,10,0"/>
                                            <TextBlock Text="ALTERAR SENHA" 
                                                       VerticalAlignment="Center"
                                                       FontWeight="SemiBold"
                                                       FontSize="14"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </materialDesign:Card>

                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>