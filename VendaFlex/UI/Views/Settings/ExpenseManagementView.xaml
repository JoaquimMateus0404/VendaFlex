<Page x:Class="VendaFlex.UI.Views.Settings.ExpenseManagementView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:converters="clr-namespace:VendaFlex.Infrastructure.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1400"
      Background="{DynamicResource MaterialDesignPaper}">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>

        <Style x:Key="StatCardStyle" TargetType="materialDesign:Card">
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="UniformCornerRadius" Value="8"/>
        </Style>

        <Style x:Key="DataGridStyle" TargetType="DataGrid" BasedOn="{StaticResource MaterialDesignDataGrid}">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="AlternatingRowBackground" Value="{DynamicResource MaterialDesignDivider}"/>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- Loading Overlay -->
        <Grid Background="#AA000000" 
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
              Panel.ZIndex="1000">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                             Value="0"
                             IsIndeterminate="True"
                             Width="60" Height="60"/>
                <TextBlock Text="Carregando..." 
                           Foreground="White"
                           Margin="0,16,0,0"
                           FontSize="16"/>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <materialDesign:Card Grid.Row="0" Margin="0,0,0,8" Padding="16" UniformCornerRadius="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Gerenciamento de Despesas" 
                                   Style="{StaticResource MaterialDesignHeadline4TextBlock}"/>
                        <TextBlock Text="Gerencie despesas, categorias e pagamentos" 
                                   Style="{StaticResource MaterialDesignBody2TextBlock}"
                                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <Button Grid.Column="1"
                            Style="{StaticResource MaterialDesignFloatingActionButton}"
                            Command="{Binding LoadDataCommand}"
                            ToolTip="Atualizar">
                        <materialDesign:PackIcon Kind="Refresh" Width="24" Height="24"/>
                    </Button>
                </Grid>
            </materialDesign:Card>

            <!-- Statistics Cards -->
            <Grid Grid.Row="1" Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Total Amount Card -->
                <materialDesign:Card Grid.Column="0" Style="{StaticResource StatCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Total de Despesas" 
                                       Style="{StaticResource MaterialDesignBody2TextBlock}"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                            <TextBlock Text="{Binding TotalAmount, StringFormat=C2}" 
                                       Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                                       FontWeight="Bold"
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                        <materialDesign:PackIcon Grid.Column="1"
                                                 Kind="CurrencyUsd"
                                                 Width="48" Height="48"
                                                 Foreground="#9C27B0"
                                                 Opacity="0.5"/>
                    </Grid>
                </materialDesign:Card>

                <!-- Paid Amount Card -->
                <materialDesign:Card Grid.Column="1" Style="{StaticResource StatCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Total Pago" 
                                       Style="{StaticResource MaterialDesignBody2TextBlock}"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                            <TextBlock Text="{Binding TotalPaidAmount, StringFormat=C2}" 
                                       Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                                       FontWeight="Bold"
                                       Foreground="#4CAF50"
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                        <materialDesign:PackIcon Grid.Column="1"
                                                 Kind="CheckCircle"
                                                 Width="48" Height="48"
                                                 Foreground="#4CAF50"
                                                 Opacity="0.5"/>
                    </Grid>
                </materialDesign:Card>

                <!-- Unpaid Amount Card -->
                <materialDesign:Card Grid.Column="2" Style="{StaticResource StatCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Total Pendente" 
                                       Style="{StaticResource MaterialDesignBody2TextBlock}"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                            <TextBlock Text="{Binding TotalUnpaidAmount, StringFormat=C2}" 
                                       Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                                       FontWeight="Bold"
                                       Foreground="#F44336"
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                        <materialDesign:PackIcon Grid.Column="1"
                                                 Kind="AlertCircle"
                                                 Width="48" Height="48"
                                                 Foreground="#F44336"
                                                 Opacity="0.5"/>
                    </Grid>
                </materialDesign:Card>

                <!-- Total Count Card -->
                <materialDesign:Card Grid.Column="3" Style="{StaticResource StatCardStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Total de Registros" 
                                       Style="{StaticResource MaterialDesignBody2TextBlock}"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                            <TextBlock Text="{Binding TotalCount}" 
                                       Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                                       FontWeight="Bold"
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                        <materialDesign:PackIcon Grid.Column="1"
                                                 Kind="FileDocument"
                                                 Width="48" Height="48"
                                                 Foreground="#2196F3"
                                                 Opacity="0.5"/>
                    </Grid>
                </materialDesign:Card>
            </Grid>

            <!-- Main Content Area -->
            <Grid Grid.Row="2" Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Expenses List -->
                <materialDesign:Card Grid.Column="0" Padding="16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Section Header -->
                        <Grid Grid.Row="0" Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="Lista de Despesas" 
                                       Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                       FontWeight="SemiBold"/>

                            <Button Grid.Column="1"
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Command="{Binding AddExpenseCommand}"
                                    ToolTip="Nova Despesa">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center"/>
                                    <TextBlock Text="Nova Despesa" Margin="8,0,0,0"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!-- Filters -->
                        <Expander Grid.Row="1" 
                                  Header="Filtros" 
                                  Margin="0,0,0,8"
                                  IsExpanded="True">
                            <Grid Margin="0,8,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Search Box -->
                                <TextBox Grid.Row="0" Grid.Column="0"
                                         materialDesign:HintAssist.Hint="Pesquisar (Título, Notas, Referência)"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                         Margin="0,0,8,0"/>

                                <!-- Type Filter -->
                                <ComboBox Grid.Row="0" Grid.Column="1"
                                          materialDesign:HintAssist.Hint="Tipo"
                                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                          ItemsSource="{Binding ExpenseTypes}"
                                          SelectedValue="{Binding FilterExpenseTypeId}"
                                          SelectedValuePath="ExpenseTypeId"
                                          DisplayMemberPath="Name"
                                          Margin="0,0,8,0"/>

                                <!-- Start Date -->
                                <DatePicker Grid.Row="0" Grid.Column="2"
                                            materialDesign:HintAssist.Hint="Data Inicial"
                                            Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                            SelectedDate="{Binding FilterStartDate}"
                                            Margin="0,0,8,0"/>

                                <!-- End Date -->
                                <DatePicker Grid.Row="0" Grid.Column="3"
                                            materialDesign:HintAssist.Hint="Data Final"
                                            Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                            SelectedDate="{Binding FilterEndDate}"
                                            Margin="0,0,8,0"/>

                                <!-- Clear Filters Button -->
                                <Button Grid.Row="0" Grid.Column="4"
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Command="{Binding ClearFiltersCommand}"
                                        ToolTip="Limpar Filtros">
                                    <materialDesign:PackIcon Kind="FilterRemove"/>
                                </Button>

                                <!-- Unpaid Only Checkbox -->
                                <CheckBox Grid.Row="1" Grid.Column="0"
                                          Content="Mostrar apenas não pagas"
                                          IsChecked="{Binding FilterUnpaidOnly}"
                                          Margin="0,8,0,0"/>
                            </Grid>
                        </Expander>

                        <!-- DataGrid -->
                        <DataGrid Grid.Row="2"
                                  Style="{StaticResource DataGridStyle}"
                                  ItemsSource="{Binding FilteredExpenses}"
                                  SelectedItem="{Binding SelectedExpense}">
                            <DataGrid.Columns>
                                <!-- Date -->
                                <DataGridTextColumn Header="Data" 
                                                    Binding="{Binding Date, StringFormat=dd/MM/yyyy}"
                                                    Width="Auto"/>

                                <!-- Title -->
                                <DataGridTextColumn Header="Título" 
                                                    Binding="{Binding Title}"
                                                    Width="2*"/>

                                <!-- Value -->
                                <DataGridTextColumn Header="Valor" 
                                                    Binding="{Binding Value, StringFormat=C2}"
                                                    Width="Auto">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="HorizontalAlignment" Value="Right"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <!-- Reference -->
                                <DataGridTextColumn Header="Referência" 
                                                    Binding="{Binding Reference}"
                                                    Width="*"/>

                                <!-- Status -->
                                <DataGridTemplateColumn Header="Status" Width="Auto">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <materialDesign:PackIcon Width="20" Height="20" VerticalAlignment="Center" Margin="0,0,4,0">
                                                    <materialDesign:PackIcon.Style>
                                                        <Style TargetType="materialDesign:PackIcon">
                                                            <Setter Property="Kind" Value="CloseCircle"/>
                                                            <Setter Property="Foreground" Value="#F44336"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsPaid}" Value="True">
                                                                    <Setter Property="Kind" Value="CheckCircle"/>
                                                                    <Setter Property="Foreground" Value="#4CAF50"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </materialDesign:PackIcon.Style>
                                                </materialDesign:PackIcon>
                                                <TextBlock VerticalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" Value="Não Paga"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsPaid}" Value="True">
                                                                    <Setter Property="Text" Value="Paga"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Paid Date -->
                                <DataGridTextColumn Header="Data Pagamento" 
                                                    Binding="{Binding PaidDate, StringFormat=dd/MM/yyyy}"
                                                    Width="Auto"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Action Buttons -->
                        <StackPanel Grid.Row="3" 
                                    Orientation="Horizontal" 
                                    HorizontalAlignment="Right"
                                    Margin="0,16,0,0">
                            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Command="{Binding EditExpenseCommand}"
                                    Margin="0,0,8,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Pencil" VerticalAlignment="Center"/>
                                    <TextBlock Text="Editar" Margin="8,0,0,0"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Command="{Binding MarkAsPaidCommand}"
                                    Margin="0,0,8,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="CheckCircle" VerticalAlignment="Center"/>
                                    <TextBlock Text="Marcar como Paga" Margin="8,0,0,0"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Command="{Binding MarkAsUnpaidCommand}"
                                    Margin="0,0,8,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="CloseCircle" VerticalAlignment="Center"/>
                                    <TextBlock Text="Marcar como Não Paga" Margin="8,0,0,0"/>
                                </StackPanel>
                            </Button>

                            <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Command="{Binding DeleteExpenseCommand}"
                                    Foreground="#F44336">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Delete" VerticalAlignment="Center"/>
                                    <TextBlock Text="Excluir" Margin="8,0,0,0"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </materialDesign:Card>

                <!-- Unpaid Expenses Sidebar -->
                <materialDesign:Card Grid.Column="1" 
                                     Width="300" 
                                     Margin="8,0,0,0" 
                                     Padding="16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="Despesas Pendentes" 
                                   Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,16"/>

                        <ListBox Grid.Row="1"
                                 ItemsSource="{Binding UnpaidExpenses}"
                                 SelectedItem="{Binding SelectedExpense}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{DynamicResource MaterialDesignDivider}"
                                            BorderThickness="0,0,0,1"
                                            Padding="8"
                                            Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Grid.Row="0"
                                                       Text="{Binding Title}"
                                                       FontWeight="SemiBold"/>

                                            <TextBlock Grid.Row="1"
                                                       Text="{Binding Value, StringFormat=C2}"
                                                       Foreground="#F44336"
                                                       FontWeight="Bold"
                                                       FontSize="16"
                                                       Margin="0,4,0,0"/>

                                            <TextBlock Grid.Row="2"
                                                       Text="{Binding Date, StringFormat=dd/MM/yyyy}"
                                                       Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                       Margin="0,4,0,0"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </materialDesign:Card>
            </Grid>

            <!-- Status Bar -->
            <materialDesign:Card Grid.Row="3" 
                                 Padding="8" 
                                 UniformCornerRadius="0"
                                 Visibility="{Binding StatusMessage, Converter={StaticResource NullToVisibilityConverter}}">
                <TextBlock Text="{Binding StatusMessage}"
                           VerticalAlignment="Center">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#4CAF50"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsStatusError}" Value="True">
                                    <Setter Property="Foreground" Value="#F44336"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </materialDesign:Card>
        </Grid>

        <!-- Form Dialog -->
        <Grid Visibility="{Binding IsFormOpen, Converter={StaticResource BooleanToVisibilityConverter}}"
              Background="#AA000000"
              Panel.ZIndex="999">
            <materialDesign:Card Width="600"
                                 Height="Auto"
                                 MaxHeight="700"
                                 Padding="24"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Form Header -->
                    <TextBlock Grid.Row="0"
                               FontWeight="SemiBold"
                               Margin="0,0,0,24">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignHeadline5TextBlock}">
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Text" Value="Nova Despesa"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                        <Setter Property="Text" Value="Editar Despesa"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <!-- Form Fields -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Expense Type -->
                            <ComboBox materialDesign:HintAssist.Hint="Tipo de Despesa *"
                                      Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                      ItemsSource="{Binding ExpenseTypes}"
                                      SelectedValue="{Binding ExpenseTypeId}"
                                      SelectedValuePath="ExpenseTypeId"
                                      DisplayMemberPath="Name"
                                      Margin="0,0,0,16"/>

                            <!-- Date -->
                            <DatePicker materialDesign:HintAssist.Hint="Data *"
                                        Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                        SelectedDate="{Binding Date}"
                                        Margin="0,0,0,16"/>

                            <!-- Value -->
                            <TextBox materialDesign:HintAssist.Hint="Valor *"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     Text="{Binding Value, StringFormat=N2}"
                                     Margin="0,0,0,16"/>

                            <!-- Title -->
                            <TextBox materialDesign:HintAssist.Hint="Título"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     Text="{Binding Title}"
                                     MaxLength="200"
                                     Margin="0,0,0,16"/>

                            <!-- Reference -->
                            <TextBox materialDesign:HintAssist.Hint="Referência"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     Text="{Binding Reference}"
                                     MaxLength="100"
                                     Margin="0,0,0,16"/>

                            <!-- Notes -->
                            <TextBox materialDesign:HintAssist.Hint="Notas"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     Text="{Binding Notes}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     MinLines="3"
                                     MaxLines="5"
                                     MaxLength="1000"
                                     VerticalScrollBarVisibility="Auto"
                                     Margin="0,0,0,16"/>

                            <!-- Is Paid -->
                            <CheckBox Content="Despesa Paga"
                                      IsChecked="{Binding IsPaid}"
                                      Margin="0,0,0,16"/>

                            <!-- Paid Date -->
                            <DatePicker materialDesign:HintAssist.Hint="Data de Pagamento"
                                        Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                                        SelectedDate="{Binding PaidDate}"
                                        IsEnabled="{Binding IsPaid}"
                                        Margin="0,0,0,16"/>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Form Actions -->
                    <StackPanel Grid.Row="2" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right"
                                Margin="0,24,0,0">
                        <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                Command="{Binding CancelEditCommand}"
                                Content="Cancelar"
                                Margin="0,0,8,0"/>

                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                Command="{Binding SaveExpenseCommand}"
                                Content="Salvar"/>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>
        </Grid>
    </Grid>
</Page>
