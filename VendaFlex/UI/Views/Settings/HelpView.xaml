<Page x:Class="VendaFlex.UI.Views.Settings.HelpView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:converters="clr-namespace:VendaFlex.Infrastructure.Converters"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Background="#F8F9FA"
      TextOptions.TextFormattingMode="Display"
      TextOptions.TextRenderingMode="ClearType"
      UseLayoutRounding="True"
      SnapsToDevicePixels="True">

    <Page.Resources>
        <converters:HexToColorConverter x:Key="HexToColorConverter"/>
        
        <!-- Card Style -->
        <Style x:Key="HelpCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E8EBF0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.08" Color="#000000"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.12" Color="#000000"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Category Card Style -->
        <Style x:Key="CategoryCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E8EBF0"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.06" Color="#000000"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="18" ShadowDepth="0" Opacity="0.12" Color="#000000"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="BorderBrush" Value="#3B82F6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- FAQ Item Style -->
        <Style x:Key="FaqExpander" TargetType="Expander">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E8EBF0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
    </Page.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="32,28,32,32">

                <!-- Header -->
                <Grid Margin="0,0,0,32">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="Central de Ajuda" FontSize="32" FontWeight="Bold" Foreground="#111827"/>
                        <TextBlock Text="Encontre respostas, tutoriais e suporte para usar o VendaFlex" 
                                   FontSize="14" Foreground="#6B7280" Margin="0,8,0,0"/>
                    </StackPanel>
                </Grid>

                <!-- Search Bar -->
                <Border Style="{StaticResource HelpCard}" Margin="0,0,0,32">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                 Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Pesquisar artigos, perguntas frequentes..."
                                 Style="{DynamicResource MaterialDesignOutlinedTextBox}"
                                 FontSize="14"
                                 Height="48"
                                 VerticalContentAlignment="Center">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Escape" Command="{Binding ClearSearchCommand}"/>
                            </TextBox.InputBindings>
                        </TextBox>

                        <Button Grid.Column="1"
                                Style="{DynamicResource MaterialDesignRaisedButton}"
                                Height="48"
                                Padding="24,0"
                                Margin="12,0,0,0"
                                Background="#3B82F6"
                                BorderBrush="#3B82F6">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Magnify" Width="20" Height="20" Margin="0,0,8,0"/>
                                <TextBlock Text="Pesquisar" FontSize="14" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>

                <!-- Quick Stats -->
                <Grid Margin="0,0,0,32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Categories -->
                    <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="20" 
                            BorderThickness="1" BorderBrush="#E8EBF0" Margin="0,0,8,0">
                        <StackPanel>
                            <Border Width="48" Height="48" CornerRadius="8" Background="#DBEAFE" Margin="0,0,0,12">
                                <materialDesign:PackIcon Kind="BookOpenPageVariant" Width="24" Height="24" 
                                                       Foreground="#3B82F6" HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="7" FontSize="24" FontWeight="Bold" Foreground="#111827"/>
                            <TextBlock Text="Categorias" FontSize="12" Foreground="#6B7280" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Articles -->
                    <Border Grid.Column="1" Background="White" CornerRadius="12" Padding="20" 
                            BorderThickness="1" BorderBrush="#E8EBF0" Margin="0,0,8,0">
                        <StackPanel>
                            <Border Width="48" Height="48" CornerRadius="8" Background="#D1FAE5" Margin="0,0,0,12">
                                <materialDesign:PackIcon Kind="FileDocument" Width="24" Height="24" 
                                                       Foreground="#10B981" HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="32+" FontSize="24" FontWeight="Bold" Foreground="#111827"/>
                            <TextBlock Text="Artigos" FontSize="12" Foreground="#6B7280" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- FAQ -->
                    <Border Grid.Column="2" Background="White" CornerRadius="12" Padding="20" 
                            BorderThickness="1" BorderBrush="#E8EBF0" Margin="0,0,8,0">
                        <StackPanel>
                            <Border Width="48" Height="48" CornerRadius="8" Background="#FEF3C7" Margin="0,0,0,12">
                                <materialDesign:PackIcon Kind="HelpCircle" Width="24" Height="24" 
                                                       Foreground="#F59E0B" HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="12" FontSize="24" FontWeight="Bold" Foreground="#111827"/>
                            <TextBlock Text="Perguntas Frequentes" FontSize="12" Foreground="#6B7280" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Video Tutorials -->
                    <Border Grid.Column="3" Background="White" CornerRadius="12" Padding="20" 
                            BorderThickness="1" BorderBrush="#E8EBF0">
                        <StackPanel>
                            <Border Width="48" Height="48" CornerRadius="8" Background="#FCE7F3" Margin="0,0,0,12">
                                <materialDesign:PackIcon Kind="Video" Width="24" Height="24" 
                                                       Foreground="#EC4899" HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="4" FontSize="24" FontWeight="Bold" Foreground="#111827"/>
                            <TextBlock Text="Vídeo Tutoriais" FontSize="12" Foreground="#6B7280" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Help Categories -->
                <Border Style="{StaticResource HelpCard}" Margin="0,0,0,32">
                    <StackPanel>
                        <TextBlock Text="Categorias de Ajuda" FontSize="20" FontWeight="Bold" 
                                   Foreground="#111827" Margin="0,0,0,20"/>

                        <ItemsControl ItemsSource="{Binding FilteredCategories}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="2"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource CategoryCard}">
                                        <StackPanel>
                                            <!-- Header -->
                                            <Grid Margin="0,0,0,16">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <Border Grid.Column="0" Width="56" Height="56" CornerRadius="12" 
                                                        Margin="0,0,16,0">
                                                    <Border.Background>
                                                        <SolidColorBrush Color="{Binding IconBackgroundColor, 
                                                            Converter={StaticResource HexToColorConverter}}"/>
                                                    </Border.Background>
                                                    <materialDesign:PackIcon Kind="{Binding Icon}" Width="28" Height="28"
                                                                           HorizontalAlignment="Center" 
                                                                           VerticalAlignment="Center">
                                                        <materialDesign:PackIcon.Foreground>
                                                            <SolidColorBrush Color="{Binding IconColor, 
                                                                Converter={StaticResource HexToColorConverter}}"/>
                                                        </materialDesign:PackIcon.Foreground>
                                                    </materialDesign:PackIcon>
                                                </Border>

                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Title}" FontSize="16" FontWeight="Bold" 
                                                               Foreground="#111827"/>
                                                    <TextBlock Text="{Binding Description}" FontSize="12" 
                                                               Foreground="#6B7280" Margin="0,4,0,0" 
                                                               TextWrapping="Wrap"/>
                                                </StackPanel>
                                            </Grid>

                                            <!-- Articles List -->
                                            <ItemsControl ItemsSource="{Binding Articles}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border BorderBrush="#E8EBF0" BorderThickness="0,1,0,0" 
                                                                Padding="0,12,0,0" Margin="0,0,0,8"
                                                                Background="Transparent"
                                                                Cursor="Hand">
                                                            <Border.InputBindings>
                                                                <MouseBinding MouseAction="LeftClick" 
                                                                            Command="{Binding DataContext.OpenDocumentationCommand, 
                                                                            RelativeSource={RelativeSource AncestorType=Page}}"
                                                                            CommandParameter="{Binding Title}"/>
                                                            </Border.InputBindings>
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>

                                                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                                    <materialDesign:PackIcon Kind="FileDocument" 
                                                                                           Width="16" Height="16" 
                                                                                           Foreground="#6B7280" 
                                                                                           Margin="0,0,8,0"
                                                                                           VerticalAlignment="Center"/>
                                                                    <TextBlock Text="{Binding Title}" FontSize="13" 
                                                                               Foreground="#111827" 
                                                                               VerticalAlignment="Center"/>
                                                                </StackPanel>

                                                                <TextBlock Grid.Column="1" Text="{Binding Duration}" 
                                                                           FontSize="11" Foreground="#9CA3AF"
                                                                           VerticalAlignment="Center"/>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Video Tutorials -->
                <Border Style="{StaticResource HelpCard}" Margin="0,0,0,32">
                    <StackPanel>
                        <TextBlock Text="Vídeo Tutoriais" FontSize="20" FontWeight="Bold" 
                                   Foreground="#111827" Margin="0,0,0,20"/>

                        <ItemsControl ItemsSource="{Binding Tutorials}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="4"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" CornerRadius="12" Margin="0,0,12,0"
                                            BorderThickness="1" BorderBrush="#E8EBF0"
                                            Cursor="Hand">
                                        <StackPanel>
                                            <!-- Thumbnail -->
                                            <Border Height="140" CornerRadius="12,12,0,0" 
                                                    Background="#F3F4F6">
                                                <Grid>
                                                    <materialDesign:PackIcon Kind="{Binding Thumbnail}" 
                                                                           Width="48" Height="48" 
                                                                           Foreground="#3B82F6"
                                                                           HorizontalAlignment="Center"
                                                                           VerticalAlignment="Center"/>
                                                    
                                                    <!-- Play Button -->
                                                    <Border Width="48" Height="48" CornerRadius="24" 
                                                            Background="#3B82F6" Opacity="0.9">
                                                        <materialDesign:PackIcon Kind="Play" Width="24" Height="24" 
                                                                               Foreground="White"
                                                                               HorizontalAlignment="Center"
                                                                               VerticalAlignment="Center"/>
                                                    </Border>

                                                    <!-- Duration Badge -->
                                                    <Border Background="#111827" Opacity="0.8" 
                                                            CornerRadius="6" Padding="8,4"
                                                            HorizontalAlignment="Right" 
                                                            VerticalAlignment="Bottom"
                                                            Margin="12">
                                                        <TextBlock Text="{Binding Duration}" FontSize="11" 
                                                                   Foreground="White" FontWeight="SemiBold"/>
                                                    </Border>
                                                </Grid>
                                            </Border>

                                            <!-- Content -->
                                            <StackPanel Margin="16">
                                                <TextBlock FontSize="10" 
                                                           Foreground="#3B82F6" FontWeight="Bold" 
                                                           Margin="0,0,0,8">
                                                    <Run Text="{Binding Category, Mode=OneWay}"/>
                                                </TextBlock>
                                                <TextBlock Text="{Binding Title}" FontSize="13" 
                                                           FontWeight="Bold" Foreground="#111827" 
                                                           TextWrapping="Wrap" Margin="0,0,0,8"/>
                                                <TextBlock Text="{Binding Description}" FontSize="11" 
                                                           Foreground="#6B7280" TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- FAQ Section -->
                <Border Style="{StaticResource HelpCard}" Margin="0,0,0,32">
                    <StackPanel>
                        <TextBlock Text="Perguntas Frequentes (FAQ)" FontSize="20" FontWeight="Bold" 
                                   Foreground="#111827" Margin="0,0,0,20"/>

                        <ItemsControl ItemsSource="{Binding FilteredFaqItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Expander Style="{StaticResource FaqExpander}"
                                              materialDesign:ExpanderAssist.HorizontalHeaderPadding="16"
                                              Margin="0,0,0,12">
                                        <Expander.Header>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <materialDesign:PackIcon Grid.Column="0" Kind="HelpCircleOutline" 
                                                                       Width="20" Height="20" 
                                                                       Foreground="#3B82F6" 
                                                                       Margin="0,0,12,0"
                                                                       VerticalAlignment="Center"/>
                                                <TextBlock Grid.Column="1" Text="{Binding Question}" 
                                                           FontSize="14" FontWeight="SemiBold" 
                                                           Foreground="#111827" TextWrapping="Wrap"
                                                           VerticalAlignment="Center"/>
                                            </Grid>
                                        </Expander.Header>
                                        <Border Background="#F9FAFB" Padding="16" Margin="16,8,16,16" 
                                                CornerRadius="8">
                                            <TextBlock Text="{Binding Answer}" FontSize="13" 
                                                       Foreground="#4B5563" TextWrapping="Wrap" 
                                                       LineHeight="22"/>
                                        </Border>
                                    </Expander>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Contact Support -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Contact Information -->
                    <Border Grid.Column="0" Style="{StaticResource HelpCard}" Margin="0,0,8,0">
                        <StackPanel>
                            <TextBlock Text="Entre em Contacto" FontSize="20" FontWeight="Bold" 
                                       Foreground="#111827" Margin="0,0,0,8"/>
                            <TextBlock Text="Não encontrou o que procura? Nossa equipe está pronta para ajudar!" 
                                       FontSize="13" Foreground="#6B7280" Margin="0,0,0,24" 
                                       TextWrapping="Wrap"/>

                            <!-- Email -->
                            <Button Style="{DynamicResource MaterialDesignOutlinedButton}"
                                    Height="56" HorizontalContentAlignment="Left"
                                    Margin="0,0,0,12"
                                    Command="{Binding OpenEmailCommand}">
                                <Grid Width="{Binding RelativeSource={RelativeSource AncestorType=Button}, 
                                      Path=ActualWidth}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" Width="40" Height="40" CornerRadius="8" 
                                            Background="#DBEAFE" Margin="0,0,16,0">
                                        <materialDesign:PackIcon Kind="Email" Width="20" Height="20" 
                                                               Foreground="#3B82F6"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="Email" FontSize="11" Foreground="#6B7280"/>
                                        <TextBlock Text="{Binding SupportEmail}" FontSize="13" 
                                                   FontWeight="SemiBold" Foreground="#111827" Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <materialDesign:PackIcon Grid.Column="2" Kind="ChevronRight" 
                                                           Width="20" Height="20" 
                                                           Foreground="#9CA3AF"
                                                           VerticalAlignment="Center"/>
                                </Grid>
                            </Button>

                            <!-- Phone -->
                            <Button Style="{DynamicResource MaterialDesignOutlinedButton}"
                                    Height="56" HorizontalContentAlignment="Left"
                                    Margin="0,0,0,12"
                                    Command="{Binding OpenPhoneCommand}">
                                <Grid Width="{Binding RelativeSource={RelativeSource AncestorType=Button}, 
                                      Path=ActualWidth}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" Width="40" Height="40" CornerRadius="8" 
                                            Background="#D1FAE5" Margin="0,0,16,0">
                                        <materialDesign:PackIcon Kind="Phone" Width="20" Height="20" 
                                                               Foreground="#10B981"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                    </Border>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="Telefone" FontSize="11" Foreground="#6B7280"/>
                                        <TextBlock Text="{Binding SupportPhone}" FontSize="13" 
                                                   FontWeight="SemiBold" Foreground="#111827" Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <materialDesign:PackIcon Grid.Column="2" Kind="ChevronRight" 
                                                           Width="20" Height="20" 
                                                           Foreground="#9CA3AF"
                                                           VerticalAlignment="Center"/>
                                </Grid>
                            </Button>

                            <!-- Support Hours -->
                            <Border Background="#F9FAFB" CornerRadius="8" Padding="16" Margin="0,12,0,0">
                                <StackPanel>
                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <materialDesign:PackIcon Grid.Column="0" Kind="Clock" 
                                                               Width="20" Height="20" 
                                                               Foreground="#3B82F6" 
                                                               Margin="0,0,12,0"
                                                               VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1" Text="Horário de Atendimento" 
                                                   FontSize="13" FontWeight="SemiBold" 
                                                   Foreground="#111827" VerticalAlignment="Center"/>
                                    </Grid>
                                    <TextBlock Text="{Binding SupportHours}" FontSize="12" 
                                               Foreground="#6B7280" Margin="32,0,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>

                    <!-- System Information -->
                    <Border Grid.Column="1" Style="{StaticResource HelpCard}" Margin="8,0,0,0">
                        <StackPanel>
                            <TextBlock Text="Informações do Sistema" FontSize="20" FontWeight="Bold" 
                                       Foreground="#111827" Margin="0,0,0,24"/>

                            <!-- Version -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Width="48" Height="48" CornerRadius="8" 
                                        Background="#EDE9FE" Margin="0,0,16,0">
                                    <materialDesign:PackIcon Kind="Information" Width="24" Height="24" 
                                                           Foreground="#8B5CF6"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="Versão do Sistema" FontSize="12" Foreground="#6B7280"/>
                                    <TextBlock Text="{Binding SystemVersion}" FontSize="16" 
                                               FontWeight="Bold" Foreground="#111827" Margin="0,4,0,0"/>
                                </StackPanel>
                            </Grid>

                            <!-- Quick Links -->
                            <TextBlock Text="Links Rápidos" FontSize="14" FontWeight="Bold" 
                                       Foreground="#111827" Margin="0,0,0,12"/>

                            <StackPanel>
                                <Button Style="{DynamicResource MaterialDesignFlatButton}"
                                        Height="40" HorizontalContentAlignment="Left" Padding="12,0"
                                        Margin="0,0,0,4">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="FileDocument" Width="18" Height="18" 
                                                               Foreground="#6B7280" Margin="0,0,12,0"/>
                                        <TextBlock Text="Documentação Completa" FontSize="13" 
                                                   Foreground="#111827" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button Style="{DynamicResource MaterialDesignFlatButton}"
                                        Height="40" HorizontalContentAlignment="Left" Padding="12,0"
                                        Margin="0,0,0,4">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Update" Width="18" Height="18" 
                                                               Foreground="#6B7280" Margin="0,0,12,0"/>
                                        <TextBlock Text="Notas de Atualização" FontSize="13" 
                                                   Foreground="#111827" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button Style="{DynamicResource MaterialDesignFlatButton}"
                                        Height="40" HorizontalContentAlignment="Left" Padding="12,0"
                                        Margin="0,0,0,4">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="ShieldCheck" Width="18" Height="18" 
                                                               Foreground="#6B7280" Margin="0,0,12,0"/>
                                        <TextBlock Text="Política de Privacidade" FontSize="13" 
                                                   Foreground="#111827" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button Style="{DynamicResource MaterialDesignFlatButton}"
                                        Height="40" HorizontalContentAlignment="Left" Padding="12,0">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="FileDocumentOutline" Width="18" Height="18" 
                                                               Foreground="#6B7280" Margin="0,0,12,0"/>
                                        <TextBlock Text="Termos de Uso" FontSize="13" 
                                                   Foreground="#111827" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>

                            <!-- Feedback -->
                            <Border Background="#EFF6FF" CornerRadius="8" Padding="16" Margin="0,20,0,0">
                                <StackPanel>
                                    <TextBlock Text="💡 Sugestões?" FontSize="14" FontWeight="Bold" 
                                               Foreground="#111827" Margin="0,0,0,8"/>
                                    <TextBlock Text="Sua opinião é importante! Entre em contacto para sugerir melhorias." 
                                               FontSize="12" Foreground="#4B5563" TextWrapping="Wrap" 
                                               Margin="0,0,0,12"/>
                                    <Button Style="{DynamicResource MaterialDesignRaisedButton}"
                                            Content="Enviar Feedback" Height="36"
                                            Background="#3B82F6" BorderBrush="#3B82F6"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </Grid>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>

