<Window x:Class="VendaFlex.UI.Views.Main.SplashView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VendaFlex.UI.Views.Main"
        mc:Ignorable="d"
       WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize"
        Height="400" Width="600" 
        WindowStyle="None" 
        Background="Transparent" 
        AllowsTransparency="True" 
        Loaded="Window_Loaded"
        ShowInTaskbar="False">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/GlobalStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Window.Triggers>
        <!-- Animacao de Entrada da Janela -->
        <EventTrigger RoutedEvent="Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                                   From="0" To="1" Duration="0:0:0.5">
                        <DoubleAnimation.EasingFunction>
                            <QuadraticEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" 
                                   From="0.95" To="1" Duration="0:0:0.5">
                        <DoubleAnimation.EasingFunction>
                            <QuadraticEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" 
                                   From="0.95" To="1" Duration="0:0:0.5">
                        <DoubleAnimation.EasingFunction>
                            <QuadraticEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Window.RenderTransform>
        <ScaleTransform/>
    </Window.RenderTransform>

    <Border CornerRadius="20" 
            Background="{StaticResource ModernGradient}"
            BorderBrush="#475569" 
            BorderThickness="1"
            Effect="{StaticResource CardShadow}">

        <Grid Margin="50">
            <!-- Particulas de Fundo Animadas -->
            <Canvas>
                <Ellipse Width="100" Height="100" Canvas.Left="50" Canvas.Top="50" Opacity="0.05">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#3B82F6" Offset="0"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                    <Ellipse.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetProperty="(Canvas.Left)" 
                                                   From="50" To="450" Duration="0:0:8"
                                                   AutoReverse="True"/>
                                    <DoubleAnimation Storyboard.TargetProperty="(Canvas.Top)" 
                                                   From="50" To="250" Duration="0:0:8"
                                                   AutoReverse="True"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Ellipse.Triggers>
                </Ellipse>

                <Ellipse Width="150" Height="150" Canvas.Left="350" Canvas.Top="200" Opacity="0.05">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#8B5CF6" Offset="0"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                    <Ellipse.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard RepeatBehavior="Forever">
                                    <DoubleAnimation Storyboard.TargetProperty="(Canvas.Left)" 
                                                   From="350" To="50" Duration="0:0:10"
                                                   AutoReverse="True"/>
                                    <DoubleAnimation Storyboard.TargetProperty="(Canvas.Top)" 
                                                   From="200" To="50" Duration="0:0:10"
                                                   AutoReverse="True"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Ellipse.Triggers>
                </Ellipse>
            </Canvas>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                <!-- Logo Animado com Efeito Glassmorphism -->
                <Grid Width="100" Height="100" Margin="0,0,0,30">
                    <Grid.RenderTransform>
                        <TransformGroup>
                            <RotateTransform x:Name="LogoRotation"/>
                        </TransformGroup>
                    </Grid.RenderTransform>

                    <!-- Circulo Externo Rotativo -->
                    <Ellipse Width="100" Height="100" 
                             StrokeThickness="3" 
                             Stroke="{StaticResource LogoGradient}"
                             Opacity="0.3"
                             StrokeDashArray="10 5">
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="LogoRotation"
                                                       Storyboard.TargetProperty="Angle"
                                                       From="0" To="360" Duration="0:0:8"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>

                    <!-- Logo Principal -->
                    <Grid>
                        <Ellipse Width="80" Height="80" 
                                Fill="{StaticResource LogoGradient}"
                                Effect="{StaticResource GlowEffect}">
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.Effect).(DropShadowEffect.BlurRadius)" 
                                                           From="20" To="35" Duration="0:0:1.5"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>

                        <TextBlock Text="VF" 
                                   Foreground="White" 
                                   FontSize="42" 
                                   FontWeight="Bold"
                                   VerticalAlignment="Center" 
                                   HorizontalAlignment="Center"
                                   FontFamily="Segoe UI">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.5"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </Grid>
                </Grid>

                <!-- Titulo com Animacao -->
                <TextBlock Text="VendaFlex" 
                           FontSize="38" 
                           FontWeight="Bold"
                           Foreground="White" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,8"
                           FontFamily="Segoe UI Light"
                           Opacity="0">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#3B82F6" BlurRadius="15" ShadowDepth="0" Opacity="0.5"/>
                    </TextBlock.Effect>
                    <TextBlock.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                                                   From="0" To="1" Duration="0:0:0.8"
                                                   BeginTime="0:0:0.3"/>
                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" 
                                                   From="20" To="0" Duration="0:0:0.8"
                                                   BeginTime="0:0:0.3"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </TextBlock.Triggers>
                    <TextBlock.RenderTransform>
                        <TranslateTransform/>
                    </TextBlock.RenderTransform>
                </TextBlock>

                <!-- Subtitulo -->
                <TextBlock Text="{Binding StatusMessage}" 
                           FontSize="14" 
                           Foreground="#94A3B8" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,30"
                           FontFamily="Segoe UI"
                           Opacity="0">
                    <TextBlock.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                                                   From="0" To="1" Duration="0:0:0.8"
                                                   BeginTime="0:0:0.5"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </TextBlock.Triggers>
                </TextBlock>

                <!-- Progress Bar Moderna -->
                <Grid Width="300" Opacity="0">
                    <Grid.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                                                   From="0" To="1" Duration="0:0:0.8"
                                                   BeginTime="0:0:0.7"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Grid.Triggers>

                    <!-- Background da barra -->
                    <Border CornerRadius="10" 
                            Background="#1E293B" 
                            Height="8"
                            BorderBrush="#334155"
                            BorderThickness="1"/>

                    <!-- Progress Bar -->
                    <Border CornerRadius="10" Height="8" ClipToBounds="True">
                        <ProgressBar IsIndeterminate="{Binding IsLoading}" 
                                    Height="8" 
                                    BorderThickness="0"
                                    Background="Transparent">
                            <ProgressBar.Foreground>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#3B82F6" Offset="0"/>
                                    <GradientStop Color="#8B5CF6" Offset="0.5"/>
                                    <GradientStop Color="#3B82F6" Offset="1"/>
                                </LinearGradientBrush>
                            </ProgressBar.Foreground>
                            <ProgressBar.Effect>
                                <DropShadowEffect Color="#3B82F6" BlurRadius="10" ShadowDepth="0" Opacity="0.6"/>
                            </ProgressBar.Effect>
                        </ProgressBar>
                    </Border>
                </Grid>

                <!-- Texto de Progresso -->
                <TextBlock Text="{Binding ProgressText}" 
                           FontSize="12" 
                           Foreground="#64748B" 
                           HorizontalAlignment="Center" 
                           Margin="0,12,0,0"
                           FontFamily="Segoe UI"
                           Opacity="0">
                    <TextBlock.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                                                   From="0" To="1" Duration="0:0:0.8"
                                                   BeginTime="0:0:0.9"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </TextBlock.Triggers>
                </TextBlock>

            </StackPanel>
        </Grid>
    </Border>
</Window>
